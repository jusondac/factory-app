<div class="bg-gray-50 min-h-screen">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
    <!-- Page Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Machine Details</h1>
          <p class="mt-1 text-sm text-gray-600">Detailed information about <%= @machine.name %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to machines_path, 
              class: "inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to List
          <% end %>
          <%= link_to edit_machine_path(@machine), 
              class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            <%= Current.user.supervisor? ? "Edit Allocation" : "Edit Machine" %>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Main Content -->
    <div class="space-y-6">
      <!-- Machine Overview Card -->
      <div class="relative bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 rounded-2xl shadow-lg border border-blue-100 p-6 backdrop-blur-sm">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-purple-500/5 rounded-2xl"></div>
        <div class="relative">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div class="ml-4">
              <h2 class="text-2xl font-bold text-gray-900"><%= @machine.name %></h2>
              <p class="text-sm text-gray-600">Machine Overview</p>
            </div>
            <div class="ml-auto">
              <% unless Current.user.supervisor? %>
                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium
                <%= case @machine.status
                    when 'active' then 'bg-green-100 text-green-800'
                    when 'inactive' then 'bg-gray-100 text-gray-800'
                    when 'under_maintenance' then 'bg-yellow-100 text-yellow-800'
                    end %>">
                  <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <% case @machine.status %>
                    <% when 'active' %>
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    <% when 'inactive' %>
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    <% when 'under_maintenance' %>
                      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    <% end %>
                  </svg>
                  <%= @machine.status.humanize %>
                </span>
              <% else %>
                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium
                <%= case @machine.allocation
                    when 'production' then 'bg-blue-100 text-blue-800'
                    when 'testing' then 'bg-yellow-100 text-yellow-800'
                    when 'packing' then 'bg-green-100 text-green-800'
                    end %>">
                  <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
                  </svg>
                  <%= @machine.allocation.humanize %>
                </span>
              <% end %>
            </div>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-<%= Current.user.supervisor? ? '3' : '4' %> gap-6">
            <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
              <div class="text-sm font-medium text-gray-600 mb-1">Machine Name</div>
              <div class="text-lg font-bold text-gray-900"><%= @machine.name %></div>
              <div class="text-xs text-gray-500">Equipment ID</div>
            </div>
            <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
              <div class="text-sm font-medium text-gray-600 mb-1">Serial Number</div>
              <div class="text-lg font-bold text-gray-900 font-mono"><%= @machine.serial_number %></div>
              <div class="text-xs text-gray-500">Unique identifier</div>
            </div>
            <% unless Current.user.supervisor? %>
              <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
                <div class="text-sm font-medium text-gray-600 mb-1">Status</div>
                <div class="text-lg font-bold text-gray-900 capitalize"><%= @machine.status.humanize %></div>
                <div class="text-xs text-gray-500">Current state</div>
              </div>
              <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
                <div class="text-sm font-medium text-gray-600 mb-1">Checkings</div>
                <div class="text-lg font-bold text-gray-900"><%= @machine.machine_checkings.count %></div>
                <div class="text-xs text-gray-500">Configured checks</div>
              </div>
            <% else %>
              <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
                <div class="text-sm font-medium text-gray-600 mb-1">Allocation</div>
                <div class="text-lg font-bold text-gray-900 capitalize"><%= @machine.allocation.humanize %></div>
                <div class="text-xs text-gray-500">Current assignment</div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <% unless Current.user.supervisor? %>
        <!-- Machine Checkings Section -->
        <div class="relative bg-gradient-to-br from-green-50 via-emerald-50 to-teal-50 rounded-2xl shadow-lg border border-green-100 backdrop-blur-sm">
          <div class="absolute inset-0 bg-gradient-to-r from-green-500/5 to-teal-500/5 rounded-2xl"></div>
          <div class="relative p-6">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold text-gray-900">Machine Checkings</h3>
                <p class="text-sm text-gray-600"><%= pluralize(@machine.machine_checkings.count, 'checking') %> configured</p>
              </div>
            </div>
            <% if @machine.machine_checkings.any? %>
              <div class="space-y-4">
                <% @machine.machine_checkings.each do |checking| %>
                  <div class="bg-white/40 backdrop-blur-sm rounded-xl p-6 border border-white/20">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                      <div>
                        <div class="text-sm font-medium text-gray-600 mb-1">Checking Name</div>
                        <div class="text-lg font-semibold text-gray-900"><%= checking.checking_name %></div>
                      </div>
                      <div>
                        <div class="text-sm font-medium text-gray-600 mb-1">Type</div>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                        <%= checking.checking_type == 'option' ? 'bg-blue-100 text-blue-800' : 'bg-purple-100 text-purple-800' %>">
                          <%= checking.checking_type&.humanize %>
                        </span>
                      </div>
                      <div>
                        <div class="text-sm font-medium text-gray-600 mb-1">
                          <%= checking.checking_type == 'option' ? 'Available Options' : 'Input Type' %>
                        </div>
                        <% if checking.checking_type == 'option' %>
                          <% if checking.checking_value.present? %>
                            <div class="flex flex-wrap gap-1">
                              <% checking.checking_options.each do |option| %>
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-gray-100 text-gray-800">
                                  <%= option %>
                                </span>
                              <% end %>
                            </div>
                          <% else %>
                            <span class="text-gray-400 italic">No options defined</span>
                          <% end %>
                        <% else %>
                          <span class="text-gray-600">Free text input</span>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <!-- Empty State for Machine Checkings -->
              <div class="bg-white/40 backdrop-blur-sm rounded-xl p-12 border border-white/20 text-center">
                <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                  <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                  </svg>
                </div>
                <h4 class="text-lg font-medium text-gray-900 mb-2">No checkings configured</h4>
                <p class="text-sm text-gray-500 mb-6">This machine doesn't have any checking configurations yet.</p>
                <%= link_to edit_machine_path(@machine), 
                  class: "inline-flex items-center justify-center rounded-xl bg-gradient-to-r from-green-600 to-emerald-600 px-6 py-3 text-sm font-semibold text-white shadow-lg hover:from-green-500 hover:to-emerald-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600 transform hover:scale-105 transition-all duration-200" do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                  </svg>
                  Add Checkings
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
