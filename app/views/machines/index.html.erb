<% content_for :title, "Machines" %>
<!-- Two-Column Layout -->
<div class="bg-gray-50 w-screen">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
    <!-- Page Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Machine Management</h1>
          <p class="mt-1 text-sm text-gray-600">
            <% if Current.user.supervisor? %>
              Monitor and manage machine allocations
            <% else %>
              Monitor and manage factory machines and their maintenance workflows
            <% end %>
          </p>
        </div>
        <% unless Current.user.supervisor? %>
        <%= link_to new_machine_path, 
            class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          New Machine
        <% end %>
        <% end %>
      </div>
    </div>
    <!-- Two Column Layout -->
    <div class="grid grid-cols-12 gap-6">
      <!-- Left Sidebar: Filters & Info -->
      <div class="col-span-12 lg:col-span-4 space-y-6">
        <!-- Filter Card -->
        <div class="relative bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 rounded-2xl shadow-lg border border-blue-100 p-6 backdrop-blur-sm">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-purple-500/5 rounded-2xl"></div>
          <div class="relative">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.121A1 1 0 013 6.414V4z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-lg font-bold text-gray-900">Smart Filters</h3>
                <p class="text-xs text-gray-600">Find machines quickly</p>
              </div>
            </div>
            <%= search_form_for @q, local: true, class: "space-y-4" do |f| %>
              <!-- Machine Name -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-blue-500 rounded-full mr-2"></span>
                  Machine Name
                </label>
                <%= f.search_field :name_cont, 
                    placeholder: "Search machines...", 
                    class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md" %>
              </div>

              <% if Current.user.supervisor? %>
              <!-- Allocation Filter for Supervisor -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-purple-500 rounded-full mr-2"></span>
                  Allocation
                </label>
                <%= f.select :allocation_eq, 
                    options_for_select([['All Allocations', ''], ['Production', 'production'], ['Testing', 'testing'], ['Packing', 'packing']], params.dig(:q, :allocation_eq)),
                    {},
                    class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-purple-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md" %>
              </div>
              <% else %>
              <!-- Status Filter for Manager -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                  Status
                </label>
                <%= f.select :status_eq, 
                    options_for_select([['All Statuses', ''], ['Active', 'active'], ['Inactive', 'inactive'], ['Under Maintenance', 'under_maintenance']], params.dig(:q, :status_eq)),
                    {},
                    class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md" %>
              </div>
              <% end %>
              <!-- Serial Number -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-purple-500 rounded-full mr-2"></span>
                  Serial Number
                </label>
                <%= f.search_field :serial_number_cont, 
                    placeholder: "e.g., 78A2CA679F", 
                    class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md" %>
              </div>
              <!-- Status -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-indigo-500 rounded-full mr-2"></span>
                  Status
                </label>
                <%= f.select :status_eq, 
                    options_for_select([
                      ['All Statuses', ''],
                      ['Inactive', Machine.statuses['inactive']],
                      ['Active', Machine.statuses['active']],
                      ['Under Maintenance', Machine.statuses['under_maintenance']]
                    ], @q.status_eq),
                    {},
                    { class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md" } %>
              </div>
              <!-- Action Buttons -->
              <div class="flex space-x-3 pt-2">
                <%= f.submit "üîç Search", class: "flex-1 bg-gradient-to-r from-blue-500 to-purple-600 text-white px-4 py-3 rounded-xl hover:from-blue-600 hover:to-purple-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105 font-semibold" %>
                <%= link_to "Clear", machines_path, class: "px-4 py-3 border border-gray-200 text-gray-700 rounded-xl hover:bg-white/80 transition-all duration-200 shadow-sm hover:shadow-md bg-white/50 backdrop-blur-sm" %>
              </div>
            <% end %>
          </div>
        </div>
        <!-- Quick Actions -->
        <div class="relative bg-gradient-to-br from-emerald-50 via-teal-50 to-cyan-50 rounded-2xl shadow-lg border border-emerald-100 p-6 backdrop-blur-sm">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/5 to-cyan-500/5 rounded-2xl"></div>
          <div class="relative">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-lg font-bold text-gray-900">Quick Filters</h3>
                <p class="text-xs text-gray-600">One-click shortcuts</p>
              </div>
            </div>
            <div class="space-y-2">
              <% if Current.user.supervisor? %>
                <!-- Allocation-based quick links for supervisors -->
                <%= link_to machines_path(q: { allocation_eq: Machine.allocations['production'] }), 
                    class: "group block w-full text-left px-4 py-3 text-sm font-medium text-gray-700 rounded-xl hover:bg-white/60 transition-all duration-200 bg-white/30 backdrop-blur-sm border border-white/20 hover:shadow-md transform hover:scale-105" do %>
                  <span class="flex items-center">
                    <span class="text-lg mr-3">üè≠</span>
                    <span class="group-hover:text-gray-900 transition-colors">Production Machines</span>
                  </span>
                <% end %>
                <%= link_to machines_path(q: { allocation_eq: Machine.allocations['testing'] }), 
                    class: "group block w-full text-left px-4 py-3 text-sm font-medium text-gray-700 rounded-xl hover:bg-white/60 transition-all duration-200 bg-white/30 backdrop-blur-sm border border-white/20 hover:shadow-md transform hover:scale-105" do %>
                  <span class="flex items-center">
                    <span class="text-lg mr-3">üß™</span>
                    <span class="group-hover:text-gray-900 transition-colors">Testing Machines</span>
                  </span>
                <% end %>
                <%= link_to machines_path(q: { allocation_eq: Machine.allocations['packing'] }), 
                    class: "group block w-full text-left px-4 py-3 text-sm font-medium text-gray-700 rounded-xl hover:bg-white/60 transition-all duration-200 bg-white/30 backdrop-blur-sm border border-white/20 hover:shadow-md transform hover:scale-105" do %>
                  <span class="flex items-center">
                    <span class="text-lg mr-3">üì¶</span>
                    <span class="group-hover:text-gray-900 transition-colors">Packing Machines</span>
                  </span>
                <% end %>
              <% else %>
                <!-- Status-based quick links for managers -->
                <%= link_to machines_path(q: { status_eq: Machine.statuses['active'] }), 
                    class: "group block w-full text-left px-4 py-3 text-sm font-medium text-gray-700 rounded-xl hover:bg-white/60 transition-all duration-200 bg-white/30 backdrop-blur-sm border border-white/20 hover:shadow-md transform hover:scale-105" do %>
                  <span class="flex items-center">
                    <span class="text-lg mr-3">üü¢</span>
                    <span class="group-hover:text-gray-900 transition-colors">Active Machines</span>
                  </span>
                <% end %>
                <%= link_to machines_path(q: { status_eq: Machine.statuses['under_maintenance'] }), 
                    class: "group block w-full text-left px-4 py-3 text-sm font-medium text-gray-700 rounded-xl hover:bg-white/60 transition-all duration-200 bg-white/30 backdrop-blur-sm border border-white/20 hover:shadow-md transform hover:scale-105" do %>
                  <span class="flex items-center">
                    <span class="text-lg mr-3">üîß</span>
                    <span class="group-hover:text-gray-900 transition-colors">Under Maintenance</span>
                  </span>
                <% end %>
                <%= link_to machines_path(q: { status_eq: Machine.statuses['inactive'] }), 
                    class: "group block w-full text-left px-4 py-3 text-sm font-medium text-gray-700 rounded-xl hover:bg-white/60 transition-all duration-200 bg-white/30 backdrop-blur-sm border border-white/20 hover:shadow-md transform hover:scale-105" do %>
                  <span class="flex items-center">
                    <span class="text-lg mr-3">‚è∏Ô∏è</span>
                    <span class="group-hover:text-gray-900 transition-colors">Inactive Machines</span>
                  </span>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- Right Content: Records & Content -->
      <div class="col-span-12 lg:col-span-8 space-y-6">
        <!-- Quick Stats -->
        <div class="relative bg-gradient-to-br from-orange-50 via-amber-50 to-yellow-50 rounded-2xl shadow-lg border border-orange-100 p-6 backdrop-blur-sm">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-orange-500/5 to-yellow-500/5 rounded-2xl"></div>
          <div class="relative">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-gradient-to-r from-orange-500 to-yellow-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-lg font-bold text-gray-900">Machine Overview</h3>
                <p class="text-xs text-gray-600">Real-time statistics</p>
              </div>
            </div>
            <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
              <div class="flex flex-col items-center p-3 bg-white/40 backdrop-blur-sm rounded-xl border border-white/20">
                <span class="text-sm font-medium text-gray-700 flex items-center mb-1">
                  <span class="w-3 h-3 bg-blue-500 rounded-full mr-2 animate-pulse"></span>
                  Total
                </span>
                <span class="font-bold text-gray-900 text-xl"><%= @machines.total_count %></span>
              </div>
              <div class="flex flex-col items-center p-3 bg-white/40 backdrop-blur-sm rounded-xl border border-white/20">
                <span class="text-sm font-medium text-gray-700 flex items-center mb-1">
                  <span class="w-3 h-3 bg-green-500 rounded-full mr-2 animate-pulse"></span>
                  Active
                </span>
                <span class="font-bold text-green-600 text-xl"><%= Machine.where(status: :active).count %></span>
              </div>
              <div class="flex flex-col items-center p-3 bg-white/40 backdrop-blur-sm rounded-xl border border-white/20">
                <span class="text-sm font-medium text-gray-700 flex items-center mb-1">
                  <span class="w-3 h-3 bg-yellow-500 rounded-full mr-2 animate-pulse"></span>
                  Maintenance
                </span>
                <span class="font-bold text-yellow-600 text-xl"><%= Machine.where(status: :under_maintenance).count %></span>
              </div>
              <div class="flex flex-col items-center p-3 bg-white/40 backdrop-blur-sm rounded-xl border border-white/20">
                <span class="text-sm font-medium text-gray-700 flex items-center mb-1">
                  <span class="w-3 h-3 bg-gray-500 rounded-full mr-2 animate-pulse"></span>
                  Inactive
                </span>
                <span class="font-bold text-gray-600 text-xl"><%= Machine.where(status: :inactive).count %></span>
              </div>
            </div>
          </div>
        </div>
        <!-- Machine Cards -->
        <div class="relative bg-gradient-to-br from-slate-50 via-gray-50 to-zinc-50 rounded-2xl shadow-lg border border-gray-100 overflow-hidden backdrop-blur-sm">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-slate-500/5 to-zinc-500/5 rounded-2xl"></div>
          <!-- Header -->
          <div class="relative px-6 py-4 border-b border-gray-200/50 bg-white/30 backdrop-blur-sm">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-8 h-8 bg-gradient-to-r from-slate-600 to-gray-700 rounded-lg flex items-center justify-center shadow-md mr-3">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.78 0-2.678-2.153-1.415-3.414l5-5A2 2 0 008 9.172V5l-1-1z"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900">Machine Registry</h3>
              </div>
              <span class="text-sm text-gray-600 bg-white/50 backdrop-blur-sm px-3 py-1 rounded-lg border border-white/20">
                Showing <%= @machines.count %> of <%= @machines.total_count %> machines
              </span>
            </div>
          </div>
          <% if @machines.any? %>
            <!-- Machine Cards Grid -->
            <div class="relative p-6">
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
                <% @machines.each do |machine| %>
                  <div class="bg-white/60 backdrop-blur-sm rounded-xl border border-white/40 p-5 hover:bg-white/80 transition-all duration-200 shadow-sm hover:shadow-md transform hover:scale-[1.02] group">
                    <div class="flex items-start justify-between mb-4">
                      <div class="flex-1">
                        <h4 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-200">
                          <%= machine.name %>
                        </h4>
                        <% unless Current.user.supervisor? %>
                        <p class="text-sm text-gray-600 font-mono">
                          Serial: <%= machine.serial_number %>
                        </p>
                        <% end %>
                      </div>
                      <% if Current.user.supervisor? %>
                        <!-- Show allocation for supervisor -->
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium
                          <%= case machine.allocation
                              when 'production' then 'bg-blue-100 text-blue-800 border border-blue-200'
                              when 'testing' then 'bg-yellow-100 text-yellow-800 border border-yellow-200'
                              when 'packing' then 'bg-green-100 text-green-800 border border-green-200'
                              end %>">
                          <%= machine.allocation.humanize %>
                        </span>
                      <% else %>
                        <!-- Show status for manager -->
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium
                          <%= case machine.status
                              when 'active' then 'bg-green-100 text-green-800 border border-green-200'
                              when 'inactive' then 'bg-gray-100 text-gray-800 border border-gray-200'
                              when 'under_maintenance' then 'bg-yellow-100 text-yellow-800 border border-yellow-200'
                              end %>">
                          <%= machine.status.humanize %>
                        </span>
                      <% end %>
                    </div>
                    <div class="flex items-center justify-between mb-4">
                      <% if Current.user.supervisor? %>
                        <!-- Supervisor view - show allocation info -->
                        <div class="flex items-center text-sm text-gray-600">
                          <svg class="w-4 h-4 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                          </svg>
                          <strong>Allocation:</strong>&nbsp;<%= machine.allocation.humanize %>
                        </div>
                      <% else %>
                        <!-- Manager view - show machine checkings -->
                        <div class="flex items-center text-sm text-gray-600">
                          <svg class="w-4 h-4 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                          </svg>
                          <strong><%= machine.machine_checkings.count %></strong>&nbsp;Checkings
                        </div>
                      <% end %>
                      <div class="text-xs text-gray-500">
                        Added <%= time_ago_in_words(machine.created_at) %> ago
                      </div>
                    </div>
                    <div class="flex space-x-2">
                      <%= link_to machine_path(machine), 
                          class: "flex-1 text-center px-3 py-2 bg-blue-50 text-blue-700 text-sm font-medium rounded-lg hover:bg-blue-100 transition-colors duration-200 border border-blue-200" do %>
                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        View
                      <% end %>
                      <%= link_to edit_machine_path(machine), 
                          class: "flex-1 text-center px-3 py-2 bg-amber-50 text-amber-700 text-sm font-medium rounded-lg hover:bg-amber-100 transition-colors duration-200 border border-amber-200" do %>
                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        <%= Current.user.supervisor? ? "Edit Allocation" : "Edit" %>
                      <% end %>
                      <% unless Current.user.supervisor? %>
                      <%= button_to machine_path(machine), method: :delete,
                          confirm: "Are you sure you want to delete this machine?",
                          class: "flex-1 text-center px-3 py-2 bg-red-50 text-red-700 text-sm font-medium rounded-lg hover:bg-red-100 transition-colors duration-200 border border-red-200",
                          form: { class: "inline" } do %>
                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Delete
                      <% end %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <!-- Pagination -->
            <div class="px-6 py-4 border-t border-gray-200/50 bg-white/30 backdrop-blur-sm">
              <div class="flex items-center justify-between">
                <div class="text-sm text-gray-700">
                  Showing <%= @machines.offset_value + 1 %> to 
                  <%= [@machines.offset_value + @machines.limit_value, @machines.total_count].min %> of 
                  <%= @machines.total_count %> machines
                </div>
                <div>
                  <%= paginate @machines %>
                </div>
              </div>
            </div>
          <% else %>
            <!-- Empty State -->
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.78 0-2.678-2.153-1.415-3.414l5-5A2 2 0 008 9.172V5l-1-1z"></path>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No machines found</h3>
              <p class="mt-1 text-sm text-gray-500">
                <% if params[:q].present? %>
                  Try adjusting your search criteria.
                <% else %>
                  Get started by creating your first machine.
                <% end %>
              </p>
              <div class="mt-6">
                <% unless Current.user.supervisor? %>
                <%= link_to new_machine_path, 
                    class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
