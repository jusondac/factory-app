<div class="bg-gray-50 min-h-screen">
  <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-6">
    <!-- Page Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Edit Machine</h1>
          <p class="mt-1 text-sm text-gray-600">Update machine details and checking configurations</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to machine_path(@machine), 
              class: "inline-flex items-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Machine
          <% end %>
        </div>
      </div>
    </div>
    <!-- Form Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <%= form_with model: @machine, local: true, class: "space-y-6" do |form| %>
        <% if @machine.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@machine.errors.count, "error") %> prohibited this machine from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside space-y-1">
                    <% @machine.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <!-- Machine Name -->
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
              placeholder: "Enter machine name" %>
        </div>
        <!-- Serial Number (read-only) -->
        <div>
          <%= form.label :serial_number, "Serial Number", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :serial_number, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-500",
              readonly: true %>
          <p class="mt-1 text-xs text-gray-500">Serial number cannot be changed after creation</p>
        </div>
        <!-- Machine Status -->
        <div>
          <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :status, 
              options_for_select(Machine.statuses.map { |key, value| [key.humanize, key] }, @machine.status),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" %>
        </div>
        <!-- Machine Checkings -->
        <div data-controller="machine-checkings" data-machine-checkings-index-value="<%= @machine.machine_checkings.length %>">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-medium text-gray-900">Machine Checkings</h3>
            <button type="button" data-action="click->machine-checkings#add"
              class="inline-flex items-center px-3 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors duration-200">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Add Checking
            </button>
          </div>
          <div data-machine-checkings-target="container" class="space-y-4">
            <%= form.fields_for :machine_checkings do |checking_form| %>
              <%= render 'machine_checking_fields', f: checking_form %>
            <% end %>
          </div>
          <!-- Template for new checkings -->
          <template data-machine-checkings-target="template">
            <div class="machine-checking-item bg-gray-50 p-4 rounded-lg border border-gray-200">
              <div class="flex items-center justify-between mb-4">
                <h4 class="text-sm font-medium text-gray-700">Machine Checking</h4>
                <button type="button" data-action="click->machine-checkings#remove" class="text-red-600 hover:text-red-800">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                </button>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Checking Name</label>
                  <input type="text" name="machine[machine_checkings_attributes][NEW_RECORD][checking_name]" 
                         class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                         placeholder="e.g., Temperature Check">
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Checking Type</label>
                  <select name="machine[machine_checkings_attributes][NEW_RECORD][checking_type]" 
                          data-action="change->machine-checkings#updateCheckingType"
                    class="checking-type-select w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Select type</option>
                    <option value="option">Option</option>
                    <option value="text">Text</option>
                  </select>
                </div>
                <div class="checking-value-container">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Checking Value</label>
                  <input type="text" name="machine[machine_checkings_attributes][NEW_RECORD][checking_value]" 
                         class="checking-value-input w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                         placeholder="Good, Fair, Poor (comma separated)">
                  <p class="checking-value-help text-xs text-gray-500 mt-1">For options: enter comma-separated values</p>
                </div>
              </div>
            </div>
          </template>
        </div>
        <!-- Submit Button -->
        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
          <%= link_to machine_path(@machine), 
              class: "px-4 py-2 bg-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-400 transition-colors duration-200" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Machine", 
              class: "px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
