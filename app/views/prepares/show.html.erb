<% content_for :title, "Preparation #{@prepare.prepare_id}" %>
<div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-3 mb-4">
      <%= link_to prepares_path, class: "text-gray-400 hover:text-gray-600" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      <% end %>
      <h1 class="text-2xl font-bold text-gray-900">Preparation <%= @prepare.prepare_id %></h1>
      <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-medium <%= @presenter.status_badge_class %>">
        <%= @prepare.status.humanize %>
      </span>
    </div>
    <!-- Preparation Info -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <h3 class="text-sm font-medium text-gray-900">Product</h3>
          <p class="mt-1 text-lg text-gray-700"><%= @presenter.product_name %></p>
        </div>
        <div>
          <h3 class="text-sm font-medium text-gray-900">Preparation Date</h3>
          <p class="mt-1 text-lg text-gray-700"><%= @presenter.formatted_date %></p>
        </div>
        <div>
          <h3 class="text-sm font-medium text-gray-900">Created By</h3>
          <p class="mt-1 text-lg text-gray-700"><%= @presenter.created_by_info %></p>
        </div>
        <% if @presenter.checked_by_info %>
          <div>
            <h3 class="text-sm font-medium text-gray-900">Checked By</h3>
            <p class="mt-1 text-lg text-gray-700"><%= @presenter.checked_by_info %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <!-- Action Buttons for Workers -->
  <% if Current.user.worker? && !@prepare.checked?%>
    <div class="mb-6 flex space-x-3">
      <% if @prepare.can_be_checked_by?(Current.user) %>
        <%= button_to check_prepare_path(@prepare), method: :patch,
            class: "inline-flex items-center rounded-md bg-green-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500",
            data: { confirm: "Are you sure you want to start checking this preparation?" } do %>
          <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Start Checking
        <% end %>
      <% elsif @prepare.checked_by == Current.user && @prepare.checking? %>
        <%= link_to checking_prepare_path(@prepare),
            class: "inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" do %>
          <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Continue Checking
        <% end %>
      <% end %>
    </div>
  <% end %>
  <!-- Ingredients List -->
  <div class="bg-white shadow-sm rounded-lg border border-gray-200">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-lg font-medium text-gray-900">Ingredients to Check</h2>
        <div class="text-sm text-gray-500">
          <span><%= @prepare_ingredients.count %> ingredient(s)</span>
          <% if @prepare_ingredients.any? %>
            <span class="ml-2">Progress: <%= @prepare.checking_progress %></span>
          <% end %>
        </div>
      </div>
      <% if @prepare_ingredients.any? %>
        <div class="space-y-4">
          <% @prepare_ingredients.each_with_index do |prepare_ingredient, index| %>
            <div class="border border-gray-200 rounded-lg p-4 <%= 'bg-green-50 border-green-200' if prepare_ingredient.checked? %>">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <h3 class="text-base font-medium text-gray-900 flex items-center">
                    <%= prepare_ingredient.ingredient_name %>
                    <% if prepare_ingredient.checked? %>
                      <svg class="ml-2 h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    <% end %>
                  </h3>
                  <p class="mt-1 text-sm text-gray-600">
                    Status: 
                    <span class="<%= prepare_ingredient.checked? ? 'text-green-600 font-semibold' : 'text-yellow-600' %>">
                      <%= prepare_ingredient.checked? ? 'Checked' : 'Not checked' %>
                    </span>
                  </p>
                </div>
                <div class="ml-4 flex-shrink-0 flex items-center space-x-3">
                  <div class="flex items-center justify-center h-8 w-8 rounded-full bg-blue-100 text-blue-600 text-sm font-medium">
                    <%= index + 1 %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-4m-12 0h4m8 0V9a2 2 0 00-2-2H8a2 2 0 00-2 2v4" />
          </svg>
          <h3 class="mt-2 text-sm font-semibold text-gray-900">No ingredients</h3>
          <p class="mt-1 text-sm text-gray-500">This product doesn't have any ingredients defined yet.</p>
        </div>
      <% end %>
    </div>
  </div>
  <!-- Status Information -->
  <% if @prepare.checked_by == Current.user %>
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">You are checking this preparation</h3>
          <div class="mt-2 text-sm text-blue-700">
            <p>Please verify all ingredients listed above. Click "Continue Checking" to proceed with the detailed inspection.</p>
          </div>
        </div>
      </div>
    </div>
  <% elsif @prepare.checked? %>
    <div class="mt-6 bg-green-50 border border-green-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-green-800">This preparation has been completed</h3>
          <div class="mt-2 text-sm text-green-700">
            <p>All ingredient checks have been completed by <%= @prepare.checked_by.email_address %>.</p>
          </div>
        </div>
      </div>
    </div>
  <% elsif @prepare.cancelled? %>
    <div class="mt-6 bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">This preparation has been cancelled</h3>
          <div class="mt-2 text-sm text-red-700">
            <p>This preparation was automatically cancelled because it was not completed by the end of the preparation date.</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
