<% content_for :title, "New Preparation" %>
<!-- Modern Hero Section -->
<div class="bg-gradient-to-br from-indigo-50 via-white to-cyan-50 min-h-screen">
  <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-12">
    <!-- Breadcrumb Navigation -->
    <nav class="flex mb-8" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <%= link_to prepares_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-indigo-600" do %>
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
            </svg>
            Preparations
          <% end %>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">New Preparation</span>
          </div>
        </li>
      </ol>
    </nav>
    <!-- Header Section -->
    <div class="text-center mb-12">
      <div class="mx-auto w-16 h-16 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl flex items-center justify-center mb-6">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
        </svg>
      </div>
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Create New Preparation</h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Set up a new preparation checklist for your production team. Select a product and date to get started.
      </p>
    </div>
    <!-- Main Form Card -->
    <div class="bg-white shadow-xl rounded-3xl border border-gray-100 overflow-hidden">
      <div class="px-8 py-10 sm:px-12">
        <%= form_with model: @prepare, local: true, class: "space-y-8" do |form| %>
          <!-- Error Messages -->
          <% if @prepare.errors.any? %>
            <div class="rounded-2xl bg-red-50 p-6 border border-red-200">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    Please fix the following <%= pluralize(@prepare.errors.count, "error") %>:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc list-inside space-y-1">
                      <% @prepare.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <!-- Form Fields -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Product Selection -->
            <div class="lg:col-span-2">
              <label class="block text-sm font-semibold text-gray-900 mb-3">
                Select Product *
              </label>
              <div class="relative">
                <%= form.select :product_id, 
                    options_from_collection_for_select(@products, :id, :name, @prepare.product_id),
                    { prompt: "Choose a product to prepare..." },
                    { 
                      required: true, 
                      class: "block w-full rounded-xl border-0 py-4 px-4 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 bg-gray-50 focus:bg-white transition-all duration-200"
                    } %>
                <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
              <p class="mt-2 text-sm text-gray-500">
                Select the product that workers will be preparing ingredients for.
              </p>
            </div>
            <!-- Preparation Date -->
            <div class="lg:col-span-2">
              <label class="block text-sm font-semibold text-gray-900 mb-3">
                Preparation Date *
              </label>
              <%= form.date_field :prepare_date, 
                  value: @prepare.prepare_date || Date.current,
                  required: true, 
                  class: "block w-full rounded-xl border-0 py-4 px-4 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 bg-gray-50 focus:bg-white transition-all duration-200" %>
              <p class="mt-2 text-sm text-gray-500">
                Choose the date when this preparation should be completed. Only one preparation per product per day is allowed.
              </p>
            </div>
          </div>
          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 pt-8 border-t border-gray-200">
            <%= link_to prepares_path, 
                class: "w-full sm:w-auto inline-flex items-center justify-center rounded-xl bg-gray-100 px-6 py-3 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-500 transition-all duration-200" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              Cancel
            <% end %>
            <%= form.submit "Create Preparation", 
                class: "w-full sm:w-auto inline-flex items-center justify-center rounded-xl bg-gradient-to-r from-indigo-600 to-purple-600 px-8 py-3 text-sm font-semibold text-white shadow-lg hover:from-indigo-500 hover:to-purple-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transform hover:scale-105 transition-all duration-200" %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Info Cards -->
    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- How it Works -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">How It Works</h3>
        </div>
        <ul class="space-y-2 text-sm text-gray-600">
          <li class="flex items-start">
            <span class="w-2 h-2 bg-blue-500 rounded-full mt-2 mr-3 flex-shrink-0"></span>
            Each preparation gets a unique ID: PRP-YYYYMMDD-#
          </li>
          <li class="flex items-start">
            <span class="w-2 h-2 bg-blue-500 rounded-full mt-2 mr-3 flex-shrink-0"></span>
            Workers can check ingredients for this preparation
          </li>
          <li class="flex items-start">
            <span class="w-2 h-2 bg-blue-500 rounded-full mt-2 mr-3 flex-shrink-0"></span>
            Track progress in real-time on the main dashboard
          </li>
        </ul>
      </div>
      <!-- Important Notes -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-amber-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.108 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">Important Notes</h3>
        </div>
        <ul class="space-y-2 text-sm text-gray-600">
          <li class="flex items-start">
            <span class="w-2 h-2 bg-amber-500 rounded-full mt-2 mr-3 flex-shrink-0"></span>
            Only one preparation per product per day
          </li>
          <li class="flex items-start">
            <span class="w-2 h-2 bg-amber-500 rounded-full mt-2 mr-3 flex-shrink-0"></span>
            Preparations cannot be edited once created
          </li>
          <li class="flex items-start">
            <span class="w-2 h-2 bg-amber-500 rounded-full mt-2 mr-3 flex-shrink-0"></span>
            Workers can start checking immediately after creation
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
