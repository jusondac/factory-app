<% content_for :title, "New Preparation" %>
<div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-3">
      <%= link_to prepares_path, class: "text-gray-400 hover:text-gray-600" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      <% end %>
      <h1 class="text-2xl font-bold text-gray-900">Create New Preparation</h1>
    </div>
    <p class="mt-1 text-sm text-gray-500">
      Create a new preparation for workers to check ingredients.
    </p>
  </div>
  <!-- Form -->
  <div class="bg-white shadow-sm rounded-lg border border-gray-200">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with model: @prepare, local: true, class: "space-y-6" do |form| %>
        <% if @prepare.errors.any? %>
          <div class="rounded-md bg-red-50 p-4 border border-red-200">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  There were <%= pluralize(@prepare.errors.count, "error") %> with your submission:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside space-y-1">
                    <% @prepare.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <!-- Product Selection -->
          <div class="sm:col-span-2">
            <%= form.label :product_id, "Product", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :product_id, 
                options_from_collection_for_select(@products, :id, :name, @prepare.product_id),
                { prompt: "Select a product..." },
                { required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
          </div>
          <!-- Prepare Date -->
          <div class="sm:col-span-2">
            <%= form.label :prepare_date, "Preparation Date", class: "block text-sm font-medium text-gray-700" %>
            <%= form.date_field :prepare_date, 
                value: @prepare.prepare_date || Date.current,
                required: true, 
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
            <p class="mt-1 text-sm text-gray-500">Only one preparation per product per day is allowed.</p>
          </div>
        </div>
        <!-- Action Buttons -->
        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
          <%= link_to "Cancel", prepares_path, 
              class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
          <%= form.submit "Create Preparation", 
              class: "inline-flex items-center rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600" %>
        </div>
      <% end %>
    </div>
  </div>
  <!-- Info Panel -->
  <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800">About Preparations</h3>
        <div class="mt-2 text-sm text-blue-700">
          <ul class="list-disc list-inside space-y-1">
            <li>Each preparation will be assigned a unique ID in the format: PRP-YYYYMMDD-#</li>
            <li>Only one preparation per product per day is allowed</li>
            <li>Workers will be able to check ingredients for this preparation</li>
            <li>You can track the progress of preparations in the main list</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
