<% content_for :title, "Checking #{@prepare.prepare_id}" %>
<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="mt-2">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <%= link_to @prepare, class: "text-gray-400 hover:text-gray-600 transition-colors" do %>
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
          <% end %>
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Checking Preparation <%= @prepare.prepare_id %></h1>
            <p class="text-sm text-gray-600 mt-1">
              Product: <span class="font-medium"><%= @prepare.product.name %></span> | 
              Date: <span class="font-medium"><%= @prepare.prepare_date.strftime("%B %d, %Y") %></span>
            </p>
          </div>
        </div>
        <div class="flex items-center space-x-3">
          <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-medium bg-blue-100 text-blue-800">
            <%= @prepare.status.humanize %>
          </span>
          <!-- Progress Badge -->
          <div class="flex items-center space-x-2">
            <div class="w-16 h-2 bg-gray-200 rounded-full">
              <div class="bg-blue-600 h-2 rounded-full transition-all duration-300" 
                   style="width: <%= (@prepare.prepare_ingredients.checked.count.to_f / @prepare.prepare_ingredients.count * 100).round(1) %>%"></div>
            </div>
            <span class="text-sm font-medium text-gray-700">
              <%= (@prepare.prepare_ingredients.checked.count.to_f / @prepare.prepare_ingredients.count * 100).round(1) %>%
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Main Content -->
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column - Ingredients Checklist -->
      <div class="lg:col-span-2">
        <div class="bg-white shadow-sm rounded-lg border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-lg font-semibold text-gray-900">Ingredient Checklist</h2>
              <div class="flex items-center space-x-4">
                <span class="progress-text text-sm text-gray-600">
                  <span class="font-medium text-green-600"><%= @prepare.prepare_ingredients.checked.count %></span>
                  of 
                  <span class="font-medium"><%= @prepare.prepare_ingredients.count %></span>
                  checked
                </span>
                <div class="remaining-count">
                  <% if @prepare.all_ingredients_checked? %>
                    <div class="flex items-center text-green-600">
                      <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span class="text-sm font-medium">Complete!</span>
                    </div>
                  <% else %>
                    <span class="text-sm text-yellow-600 font-medium">
                      <%= @prepare.prepare_ingredients.unchecked.count %> remaining
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="p-6">
            <% if @prepare_ingredients.any? %>
              <div class="space-y-3" data-controller="ingredient-checking" 
                   data-ingredient-checking-prepare-id-value="<%= @prepare.id %>"
                   data-ingredient-checking-update-url-value="<%= update_check_prepare_path(@prepare) %>">
                <% @prepare_ingredients.each_with_index do |prepare_ingredient, index| %>
                  <div class="ingredient-item group border border-gray-200 rounded-lg p-4 hover:shadow-md transition-all duration-200 <%= 'bg-green-50 border-green-200 shadow-sm' if prepare_ingredient.checked? %>">
                    <label class="flex items-center cursor-pointer flex-1 group" 
                           data-action="click->ingredient-checking#toggleCheck">
                      <!-- Custom Checkbox -->
                      <div class="relative flex-shrink-0">
                        <input type="checkbox" 
                               <%= 'checked' if prepare_ingredient.checked? %>
                               data-ingredient-id="<%= prepare_ingredient.id %>"
                               class="sr-only">
                        <div class="custom-checkbox w-6 h-6 border-2 rounded-md flex items-center justify-center transition-all duration-200 <%= prepare_ingredient.checked? ? 'bg-green-500 border-green-500' : 'border-gray-300 group-hover:border-gray-400' %>">
                          <% if prepare_ingredient.checked? %>
                            <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                          <% end %>
                        </div>
                      </div>
                      <!-- Ingredient Info -->
                      <div class="ml-4 flex-1">
                        <div class="flex items-center">
                          <h3 class="text-base font-medium text-gray-900">
                            <%= prepare_ingredient.ingredient_name %>
                          </h3>
                          <% if prepare_ingredient.checked? %>
                            <span class="status-badge ml-3 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
                              âœ“ Checked
                            </span>
                          <% else %>
                            <span class="status-badge ml-3 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                              Pending
                            </span>
                          <% end %>
                        </div>
                        <p class="help-text mt-1 text-sm text-gray-500">
                          Click to <%= prepare_ingredient.checked? ? 'uncheck' : 'check' %> this ingredient
                        </p>
                      </div>
                      <!-- Number Badge -->
                      <div class="flex-shrink-0 ml-4">
                        <div class="number-badge flex items-center justify-center h-8 w-8 rounded-full <%= prepare_ingredient.checked? ? 'bg-green-100 text-green-700' : 'bg-blue-100 text-blue-600' %> text-sm font-semibold">
                          <%= index + 1 %>
                        </div>
                      </div>
                    </label>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-4m-12 0h4m8 0V9a2 2 0 00-2-2H8a2 2 0 00-2 2v4" />
                </svg>
                <h3 class="mt-2 text-sm font-semibold text-gray-900">No ingredients</h3>
                <p class="mt-1 text-sm text-gray-500">This product doesn't have any ingredients defined yet.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- Right Column - Actions & Information -->
      <div class="lg:col-span-1">
        <div class="space-y-6">
          <!-- Progress Card -->
          <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Progress Overview</h3>
            <!-- Progress Bar -->
            <div class="mb-4">
              <div class="flex items-center justify-between text-sm text-gray-600 mb-2">
                <span>Completion</span>
                <span class="font-medium"><%= (@prepare.prepare_ingredients.checked.count.to_f / @prepare.prepare_ingredients.count * 100).round(1) %>%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3">
                <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-3 rounded-full transition-all duration-500" 
                     style="width: <%= (@prepare.prepare_ingredients.checked.count.to_f / @prepare.prepare_ingredients.count * 100).round(1) %>%"></div>
              </div>
            </div>
            <!-- Stats -->
            <div class="grid grid-cols-2 gap-4">
              <div class="text-center p-3 bg-green-50 rounded-lg">
                <div class="text-2xl font-bold text-green-600"><%= @prepare.prepare_ingredients.checked.count %></div>
                <div class="text-sm text-green-700">Checked</div>
              </div>
              <div class="text-center p-3 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-gray-600"><%= @prepare.prepare_ingredients.unchecked.count %></div>
                <div class="text-sm text-gray-700">Remaining</div>
              </div>
            </div>
          </div>
          <!-- Instructions Card -->
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-semibold text-blue-800">Instructions</h3>
                <div class="mt-2 text-sm text-blue-700">
                  <ul class="list-disc list-inside space-y-1">
                    <li>Check each ingredient by clicking the checkbox</li>
                    <li>You can complete preparation at any time</li>
                    <li>Unchecked items will be marked as pending</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <!-- Action Buttons -->
          <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Actions</h3>
            <div class="space-y-3">
              <!-- Complete Button - Always Available -->
              <%= button_to complete_prepare_path(@prepare), 
                  method: :patch,
                  data: { confirm: @prepare.all_ingredients_checked? ? "Mark this preparation as complete?" : "Some ingredients are not checked yet. Are you sure you want to complete this preparation?" },
                  class: "w-full inline-flex items-center justify-center rounded-md px-4 py-3 text-sm font-semibold text-white shadow-sm transition-colors #{@prepare.all_ingredients_checked? ? 'bg-green-600 hover:bg-green-500' : 'bg-blue-600 hover:bg-blue-500'}" do %>
                <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <%= @prepare.all_ingredients_checked? ? "Complete Preparation" : "Force Complete" %>
              <% end %>
              <!-- Cancel Button -->
              <%= button_to cancel_prepare_path(@prepare), 
                  method: :patch,
                  data: { confirm: "Are you sure you want to cancel this preparation? This action cannot be undone." },
                  class: "w-full inline-flex items-center justify-center rounded-md bg-red-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-red-500 transition-colors" do %>
                <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Cancel Preparation
              <% end %>
              <!-- Back Button -->
              <%= link_to @prepare, 
                  class: "w-full inline-flex items-center justify-center rounded-md bg-gray-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-gray-500 transition-colors" do %>
                <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to Details
              <% end %>
            </div>
          </div>
          <!-- Summary Card -->
          <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Preparation Details</h3>
            <dl class="space-y-3">
              <div>
                <dt class="text-sm font-medium text-gray-500">Preparation ID</dt>
                <dd class="text-sm text-gray-900 font-mono"><%= @prepare.prepare_id %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Product</dt>
                <dd class="text-sm text-gray-900"><%= @prepare.product.name %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Prepare Date</dt>
                <dd class="text-sm text-gray-900"><%= @prepare.prepare_date.strftime("%B %d, %Y") %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="text-sm">
                  <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800">
                    <%= @prepare.status.humanize %>
                  </span>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Checked by</dt>
                <dd class="text-sm text-gray-900"><%= @prepare.checked_by&.email_address || "N/A" %></dd>
              </div>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
