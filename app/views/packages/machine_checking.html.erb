<% content_for :title, "Machine Checking for Package" %>
<div class="max-w-3xl mx-auto py-8">
  <h2 class="text-2xl font-bold mb-6 text-gray-900">Machine Checking for <%= @package.package_id %></h2>
  <div class="mb-6">
    <div class="bg-white rounded-xl shadow p-6">
      <h3 class="text-lg font-semibold mb-2">Machine: <%= @package.machine.name %></h3>
      <p class="text-sm text-gray-600">Serial: <%= @package.machine.serial_number %></p>
      <p class="text-sm text-gray-600">Line: <%= @package.machine.line %></p>
    </div>
  </div>
  <%= form_with url: update_machine_checking_package_path(@package), method: :patch, local: true do %>
    <div class="space-y-6">
      <% @machine_checkings.each do |checking| %>
        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
          <label class="block text-lg font-semibold text-gray-800 mb-2"><%= checking.checking_name %></label>
          <% if checking.checking_type == 'option' %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <% checking.checking_options.each do |option| %>
                <% is_selected = @package_machine_checks[checking.id]&.split(',')&.map(&:strip)&.include?(option) || false %>
                <label class="flex items-center">
                  <%= check_box_tag "machine_checking[#{checking.id}][]", option, is_selected, class: "mr-2" %>
                  <span><%= option %></span>
                </label>
              <% end %>
            </div>
          <% else %>
            <%= text_field_tag "machine_checking[#{checking.id}]", @package_machine_checks[checking.id], class: "w-full px-3 py-2 border rounded-lg" %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="mt-8 flex justify-end">
      <%= submit_tag "Complete Machine Checking", class: "bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700" %>
    </div>
  <% end %>
  <div class="mt-6">
    <%= link_to @package, class: "text-gray-600 hover:text-gray-900" do %>
      &larr; Back to Package
    <% end %>
  </div>
</div>
