<!-- Supervisor Dashboard - Modern Design -->
<div class="w-full bg-gray-50 min-h-screen">
  <!-- Header with Gradient -->
  <div class="bg-gradient-to-r from-blue-600 to-indigo-700 px-8 py-12 mb-8">
    <div class="max-w-7xl mx-auto">
      <div class="text-center md:text-left">
        <h1 class="text-4xl font-bold text-white mb-4">Supervisor Control Center</h1>
        <p class="text-xl text-blue-100 mb-6">
          Monitor factory operations • Oversee preparations • Track production
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
          <%= link_to new_prepare_path, class: "inline-flex items-center px-6 py-3 bg-white text-blue-600 font-semibold rounded-lg shadow-lg hover:bg-blue-50 transition-all duration-200 transform hover:scale-105" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Create Preparation
          <% end %>
          <%= link_to prepares_path, class: "inline-flex items-center px-6 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-blue-600 transition-all duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            Manage All Preparations
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-8 pb-8">
    <!-- Quick Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Daily Operations -->
      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-blue-500 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-2">Today's Operations</p>
            <p class="text-3xl font-bold text-gray-900"><%= @unit_batches_today %></p>
            <p class="text-sm text-blue-600 mt-1">Unit Batches</p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Preparation Status -->
      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-green-500 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-2">Preparations Today</p>
            <p class="text-3xl font-bold text-gray-900"><%= @prepares_today %></p>
            <p class="text-sm text-green-600 mt-1"><%= @prepares_checked_today %> Completed</p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Production Status -->
      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-purple-500 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-2">Production Today</p>
            <p class="text-3xl font-bold text-gray-900"><%= @produces_today %></p>
            <p class="text-sm text-purple-600 mt-1"><%= @produces_completed_today %> Finished</p>
          </div>
          <div class="bg-purple-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Pending Tasks -->
      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-yellow-500 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-2">Pending Tasks</p>
            <p class="text-3xl font-bold text-gray-900"><%= @prepares_pending %></p>
            <p class="text-sm text-yellow-600 mt-1">Require Attention</p>
          </div>
          <div class="bg-yellow-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Status Overview Charts -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
      <!-- Production Status Chart -->
      <div class="bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Production Status</h3>
        <div class="space-y-3">
          <% @produces_by_status.each do |status, count| %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-3 h-3 rounded-full bg-<%= status == 'produced' ? 'green' : status == 'producing' ? 'yellow' : 'red' %>-500 mr-3"></div>
                <span class="text-sm font-medium text-gray-700 capitalize"><%= status.humanize %></span>
              </div>
              <span class="text-sm font-bold text-gray-900"><%= count %></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Unit Batch Status -->
      <div class="bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Unit Batch Status</h3>
        <div class="space-y-3">
          <% @unit_batches_by_status.each do |status, count| %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-3 h-3 rounded-full bg-<%= status == 'packing' ? 'green' : status == 'testing' ? 'blue' : status == 'production' ? 'yellow' : 'gray' %>-500 mr-3"></div>
                <span class="text-sm font-medium text-gray-700 capitalize"><%= status.humanize %></span>
              </div>
              <span class="text-sm font-bold text-gray-900"><%= count %></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Weekly Trends -->
      <div class="bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Weekly Overview</h3>
        <div class="space-y-4">
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Unit Batches</span>
            <span class="text-lg font-bold text-blue-600"><%= @unit_batches_this_week %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Preparations</span>
            <span class="text-lg font-bold text-green-600"><%= @prepares_this_week %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Production</span>
            <span class="text-lg font-bold text-purple-600"><%= @produces_this_week %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activities -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Recent Preparations -->
      <div class="bg-white rounded-xl shadow-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900">Recent Preparations</h3>
            <%= link_to prepares_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
              View All →
            <% end %>
          </div>
        </div>
        <div class="p-6">
          <% if @recent_prepares.any? %>
            <div class="space-y-4">
              <% @recent_prepares.each do |prepare| %>
                <div class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-<%= prepare.status == 'checked' ? 'green' : prepare.status == 'checking' ? 'yellow' : 'blue' %>-100 rounded-full flex items-center justify-center">
                      <svg class="w-5 h-5 text-<%= prepare.status == 'checked' ? 'green' : prepare.status == 'checking' ? 'yellow' : 'blue' %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4 flex-1">
                    <div class="flex items-center justify-between">
                      <p class="text-sm font-semibold text-gray-900"><%= prepare.prepare_id %></p>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= prepare.status == 'checked' ? 'green' : prepare.status == 'checking' ? 'yellow' : 'blue' %>-100 text-<%= prepare.status == 'checked' ? 'green' : prepare.status == 'checking' ? 'yellow' : 'blue' %>-800">
                        <%= prepare.status.capitalize %>
                      </span>
                    </div>
                    <p class="text-xs text-gray-500 mt-1">
                      <%= prepare.product.name %> • <%= prepare.prepare_date.strftime("%b %d") %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              <p class="text-gray-500">No recent preparations</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Recent Production -->
      <div class="bg-white rounded-xl shadow-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900">Recent Production</h3>
            <%= link_to produces_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
              View All →
            <% end %>
          </div>
        </div>
        <div class="p-6">
          <% if @recent_produces.any? %>
            <div class="space-y-4">
              <% @recent_produces.each do |produce| %>
                <div class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-<%= produce.status == 'produced' ? 'green' : produce.status == 'producing' ? 'yellow' : 'gray' %>-100 rounded-full flex items-center justify-center">
                      <svg class="w-5 h-5 text-<%= produce.status == 'produced' ? 'green' : produce.status == 'producing' ? 'yellow' : 'gray' %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4 flex-1">
                    <div class="flex items-center justify-between">
                      <p class="text-sm font-semibold text-gray-900"><%= produce.product_id %></p>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= produce.status == 'produced' ? 'green' : produce.status == 'producing' ? 'yellow' : 'gray' %>-100 text-<%= produce.status == 'produced' ? 'green' : produce.status == 'producing' ? 'yellow' : 'gray' %>-800">
                        <%= produce.status.capitalize %>
                      </span>
                    </div>
                    <p class="text-xs text-gray-500 mt-1">
                      <%= produce.product.name %> • <%= produce.product_date.strftime("%b %d") %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <p class="text-gray-500">No recent production</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
