<!-- Worker Dashboard - Modern Design -->
<div class="w-full bg-gray-50 min-h-screen">
  <!-- Header with Gradient -->
  <div class="bg-gradient-to-r from-green-600 to-emerald-700 px-8 py-12 mb-8">
    <div class="max-w-7xl mx-auto">
      <div class="text-center md:text-left">
        <h1 class="text-4xl font-bold text-white mb-4">Worker Dashboard</h1>
        <p class="text-xl text-green-100 mb-6">
          Check preparations • Execute production • Complete quality tasks
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
          <%= link_to prepares_path(q: { status_eq: 'unchecked' }), class: "inline-flex items-center px-6 py-3 bg-white text-green-600 font-semibold rounded-lg shadow-lg hover:bg-green-50 transition-all duration-200 transform hover:scale-105" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Check Preparations
          <% end %>
          <%= link_to produces_path, class: "inline-flex items-center px-6 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-green-600 transition-all duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Production Tasks
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-8 pb-8">
    <!-- Quick Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- My Tasks Today -->
      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-blue-500 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-2">My Tasks Today</p>
            <p class="text-3xl font-bold text-gray-900"><%= @prepares_today %></p>
            <p class="text-sm text-blue-600 mt-1">To Check</p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Completed Today -->
      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-green-500 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-2">Completed Today</p>
            <p class="text-3xl font-bold text-gray-900"><%= @prepares_checked_today %></p>
            <p class="text-sm text-green-600 mt-1">Checks Done</p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Production Tasks -->
      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-purple-500 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-2">Production Today</p>
            <p class="text-3xl font-bold text-gray-900"><%= @produces_today %></p>
            <p class="text-sm text-purple-600 mt-1">Items</p>
          </div>
          <div class="bg-purple-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Pending Items -->
      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-orange-500 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-2">Pending Work</p>
            <p class="text-3xl font-bold text-gray-900"><%= @prepares_pending %></p>
            <p class="text-sm text-orange-600 mt-1">Need Action</p>
          </div>
          <div class="bg-orange-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      <!-- Quick Check -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-blue-200 hover:border-blue-400 transition-colors">
        <div class="flex items-center mb-4">
          <div class="bg-blue-100 p-2 rounded-lg mr-3">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">Quick Check</h3>
        </div>
        <p class="text-gray-600 mb-4">Check preparation ingredients and mark as complete</p>
        <%= link_to prepares_path(q: { status_eq: 'unchecked' }), class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium" do %>
          Start Checking →
        <% end %>
      </div>

      <!-- Production Line -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-green-200 hover:border-green-400 transition-colors">
        <div class="flex items-center mb-4">
          <div class="bg-green-100 p-2 rounded-lg mr-3">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">Production Line</h3>
        </div>
        <p class="text-gray-600 mb-4">Execute production tasks and update machine status</p>
        <%= link_to produces_path(q: { status_eq: 'producing' }), class: "inline-flex items-center text-green-600 hover:text-green-800 font-medium" do %>
          View Production →
        <% end %>
      </div>

      <!-- My Progress -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-purple-200 hover:border-purple-400 transition-colors">
        <div class="flex items-center mb-4">
          <div class="bg-purple-100 p-2 rounded-lg mr-3">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">My Progress</h3>
        </div>
        <p class="text-gray-600 mb-4">Track your daily completion rate and achievements</p>
        <div class="flex items-center text-purple-600 font-medium">
          <span><%= @prepares_checked_today %>/<%= @prepares_today %> Today</span>
        </div>
      </div>
    </div>

    <!-- Today's Work -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Today's Preparation Tasks -->
      <div class="bg-white rounded-xl shadow-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900">Today's Tasks</h3>
            <%= link_to prepares_path(q: { prepare_date_eq: Date.current }), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
              View All →
            <% end %>
          </div>
        </div>
        <div class="p-6">
          <% today_prepares = Prepare.where(prepare_date: Date.current).includes(:unit_batch, :created_by).limit(6) %>
          <% if today_prepares.any? %>
            <div class="space-y-3">
              <% today_prepares.each do |prepare| %>
                <div class="flex items-center p-3 bg-gray-50 rounded-lg hover:bg-blue-50 transition-colors group">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-<%= prepare.status == 'checked' ? 'green' : prepare.status == 'checking' ? 'yellow' : 'blue' %>-100 rounded-full flex items-center justify-center">
                      <% if prepare.status == 'checked' %>
                        <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                      <% elsif prepare.status == 'checking' %>
                        <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      <% else %>
                        <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                        </svg>
                      <% end %>
                    </div>
                  </div>
                  <div class="ml-3 flex-1">
                    <div class="flex items-center justify-between">
                      <p class="text-sm font-medium text-gray-900"><%= prepare.prepare_id %></p>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-<%= prepare.status == 'checked' ? 'green' : prepare.status == 'checking' ? 'yellow' : 'blue' %>-100 text-<%= prepare.status == 'checked' ? 'green' : prepare.status == 'checking' ? 'yellow' : 'blue' %>-800">
                        <%= prepare.status.capitalize %>
                      </span>
                    </div>
                    <p class="text-xs text-gray-500 mt-1">
                      <%= prepare.product.name %>
                    </p>
                  </div>
                  <% if prepare.status != 'checked' && Current.session.user.can_check_prepares? %>
                    <div class="ml-3 opacity-0 group-hover:opacity-100 transition-opacity">
                      <%= link_to prepare_path(prepare), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
                        Check →
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
              <h3 class="text-lg font-medium text-gray-900 mb-2">All caught up!</h3>
              <p class="text-gray-500">No preparation tasks scheduled for today</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Recent Production Activities -->
      <div class="bg-white rounded-xl shadow-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900">Recent Production</h3>
            <%= link_to produces_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
              View All →
            <% end %>
          </div>
        </div>
        <div class="p-6">
          <% if @recent_produces.any? %>
            <div class="space-y-3">
              <% @recent_produces.each do |produce| %>
                <div class="flex items-center p-3 bg-gray-50 rounded-lg hover:bg-green-50 transition-colors">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-<%= produce.status == 'produced' ? 'green' : produce.status == 'producing' ? 'yellow' : 'gray' %>-100 rounded-full flex items-center justify-center">
                      <% if produce.status == 'produced' %>
                        <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                      <% elsif produce.status == 'producing' %>
                        <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                      <% else %>
                        <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      <% end %>
                    </div>
                  </div>
                  <div class="ml-3 flex-1">
                    <div class="flex items-center justify-between">
                      <p class="text-sm font-medium text-gray-900"><%= produce.product_id %></p>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-<%= produce.status == 'produced' ? 'green' : produce.status == 'producing' ? 'yellow' : 'gray' %>-100 text-<%= produce.status == 'produced' ? 'green' : produce.status == 'producing' ? 'yellow' : 'gray' %>-800">
                        <%= produce.status.capitalize %>
                      </span>
                    </div>
                    <p class="text-xs text-gray-500 mt-1">
                      <%= produce.product.name %> • <%= produce.product_date.strftime("%b %d") %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <h3 class="text-lg font-medium text-gray-900 mb-2">Ready for production</h3>
              <p class="text-gray-500">No active production items at the moment</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
