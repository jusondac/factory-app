<thead class="bg-gradient-to-r from-gray-50 to-slate-50 backdrop-blur-sm">
  <tr>
    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Unit ID</th>
    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Batch Code</th>
    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Product</th>
    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Status</th>
    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Progress</th>
    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
  </tr>
</thead>
<tbody class="bg-white/40 backdrop-blur-sm divide-y divide-gray-200/30">
  <% @report_data.values.flatten.each do |unit_batch| %>
    <tr class="transition-all duration-200 cursor-pointer hover:bg-gray-50/50" 
          onclick="window.location.href='<%= unit_batch_path(unit_batch) %>'">
      <!-- Unit ID -->
      <td class="px-6 py-4">
        <div class="text-sm font-medium text-gray-900"><%= unit_batch.unit_id %></div>
        <div class="text-xs text-gray-500">Created: <%= unit_batch.created_at.strftime("%m/%d/%Y") %></div>
      </td>
      <!-- Batch Code -->
      <td class="px-6 py-4">
        <div class="text-sm font-medium text-gray-900"><%= unit_batch.batch_code %></div>
      </td>
      <!-- Product -->
      <td class="px-6 py-4">
        <div class="text-sm text-gray-900 font-medium"><%= unit_batch.product&.name || 'No product' %></div>
        <div class="text-xs text-gray-500">
          Quantity: <span class="font-semibold"><%= unit_batch.quantity %></span>
        </div>
        <% if unit_batch.product&.product_code %>
          <div class="text-xs text-blue-600 bg-blue-50 px-2 py-0.5 rounded mt-1 inline-block">
            <%= unit_batch.product.product_code %>
          </div>
        <% end %>
      </td>
      <!-- Status -->
      <td class="px-6 py-4">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
            <%= case unit_batch.status
                when 'preparation' then 'bg-blue-100 text-blue-800'
                when 'production' then 'bg-yellow-100 text-yellow-800'
                when 'testing' then 'bg-purple-100 text-purple-800'
                when 'packing' then 'bg-green-100 text-green-800'
                when 'cancelled' then 'bg-red-100 text-red-800'
                else 'bg-gray-100 text-gray-800'
                end %>">
          <div class="w-2 h-2 rounded-full mr-2 
              <%= case unit_batch.status
                  when 'preparation' then 'bg-blue-600'
                  when 'production' then 'bg-yellow-600'
                  when 'testing' then 'bg-purple-600'
                  when 'packing' then 'bg-green-600'
                  when 'cancelled' then 'bg-red-600'
                  else 'bg-gray-600'
                  end %>"></div>
          <%= unit_batch.status.humanize %>
        </span>
      </td>
      <!-- Progress -->
      <td class="px-6 py-4">
        <div class="space-y-2">
          <% 
              total_steps = 0
              completed_steps = 0
              
              # Count prepare step
              if unit_batch.prepare
                total_steps += 1
                if unit_batch.prepare.prepare_ingredients.any? && unit_batch.prepare.prepare_ingredients.all?(&:checked)
                  completed_steps += 1
                end
              end
              
              # Count produce step
              if unit_batch.produce
                total_steps += 1
                completed_steps += 1 if unit_batch.produce.status == 'produced'
              end
              
              # Count package step
              if unit_batch.package
                total_steps += 1
                completed_steps += 1 if unit_batch.package.status == 'package'
              end
              
              progress_percentage = total_steps > 0 ? (completed_steps.to_f / total_steps * 100).round : 0
            %>
          <div class="flex items-center space-x-2">
            <div class="flex-1 bg-gray-200 rounded-full h-3">
              <div class="bg-gradient-to-r from-blue-500 to-green-500 h-3 rounded-full transition-all duration-500 ease-in-out"
                     style="width: <%= progress_percentage %>%"></div>
            </div>
            <span class="text-xs font-medium text-gray-700"><%= progress_percentage %>%</span>
          </div>
          <div class="flex flex-wrap gap-1">
            <% if unit_batch.prepare %>
              <% if unit_batch.prepare.prepare_ingredients.any? && unit_batch.prepare.prepare_ingredients.all?(&:checked) %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Prepared
                  <% if unit_batch.prepare.prepare_ingredients.any? %>
                    <span class="ml-1 bg-green-200 text-green-900 px-1 rounded-full text-xs">
                      <%= unit_batch.prepare.prepare_ingredients.count %>
                    </span>
                  <% end %>
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Preparing
                  <% if unit_batch.prepare.prepare_ingredients.any? %>
                    <span class="ml-1 bg-yellow-200 text-yellow-900 px-1 rounded-full text-xs">
                      <%= unit_batch.prepare.prepare_ingredients.count %>
                    </span>
                  <% end %>
                </span>
              <% end %>
            <% end %>
            <% if unit_batch.produce %>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                </svg>
                <% if unit_batch.produce.status == 'produced' %>✓<% else %>⏳<% end %> Produced
                <% if unit_batch.produce.machine %>
                  <span class="ml-1 bg-blue-200 text-blue-900 px-1 rounded-full text-xs">
                    <%= unit_batch.produce.machine.name.first(3) %>
                  </span>
                <% end %>
              </span>
            <% end %>
            <% if unit_batch.package %>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
                <% if unit_batch.package.status == 'package' %>✓<% else %>⏳<% end %> Packaged
                <% if unit_batch.package.machine %>
                  <span class="ml-1 bg-purple-200 text-purple-900 px-1 rounded-full text-xs">
                    <%= unit_batch.package.machine.name.first(3) %>
                  </span>
                <% end %>
              </span>
            <% end %>
            <% unless unit_batch.prepare || unit_batch.produce || unit_batch.package %>
              <span class="text-gray-500 text-xs">No processes</span>
            <% end %>
          </div>
        </div>
      </td>
      <!-- Actions -->
      <td class="px-6 py-4 text-sm" onclick="event.stopPropagation()">
        <div class="flex space-x-2">
          <%= link_to "View", unit_batch_path(unit_batch),
                class: "text-blue-600 hover:text-blue-900 transition-colors font-medium" %>
          <span class="text-gray-300">|</span>
          <%= link_to "Edit", edit_unit_batch_path(unit_batch),
                class: "text-green-600 hover:text-green-900 transition-colors font-medium" %>
        </div>
      </td>
    </tr>
  <% end %>
</tbody>
