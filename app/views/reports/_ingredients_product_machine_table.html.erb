<thead class="bg-gradient-to-r from-gray-50 to-slate-50 backdrop-blur-sm">
  <tr>
    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Batch Code</th>
    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Product</th>
    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Ingredients</th>
    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Machines</th>
    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Status</th>
  </tr>
</thead>
<tbody class="bg-white/40 backdrop-blur-sm divide-y divide-gray-200/30">
  <% @report_data.each do |date, unit_batches| %>
    <!-- Date Header Row -->
    <tr class="bg-gradient-to-r from-blue-50 to-indigo-50">
      <td colspan="5" class="px-6 py-3">
        <div class="flex items-center">
          <svg class="w-4 h-4 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="text-sm font-semibold text-blue-900"><%= date.strftime("%B %d, %Y") %></span>
          <span class="ml-2 text-xs text-blue-700 bg-blue-100 px-2 py-1 rounded-full">
            <%= unit_batches.count %> batch<%= 'es' if unit_batches.count != 1 %>
          </span>
        </div>
      </td>
    </tr>
    <% unit_batches.each do |unit_batch| %>
      <tr class="transition-all duration-200 cursor-pointer hover:bg-gray-50/50">
        <!-- Batch Code -->
        <td class="px-6 py-4">
          <div class="text-sm font-medium text-gray-900"><%= unit_batch.batch_code %></div>
        </td>
        <!-- Product -->
        <td class="px-6 py-4">
          <div class="text-sm text-gray-900"><%= unit_batch.product&.name || 'No product' %></div>
          <div class="text-xs text-gray-500">Qty: <%= unit_batch.quantity %></div>
        </td>
        <!-- Ingredients -->
        <td class="px-6 py-4">
          <div class="text-sm text-gray-900">
            <% if unit_batch.prepare&.prepare_ingredients %>
              <div class="space-y-1">
                <% unit_batch.prepare.prepare_ingredients.each do |pi| %>
                  <div class="flex items-center">
                    <span class="<%= pi.checked ? 'text-green-600' : 'text-red-600' %> font-bold mr-2">
                      <%= pi.checked ? '✓' : '✗' %>
                    </span>
                    <span class="<%= pi.checked ? 'text-gray-900' : 'text-red-700' %>">
                      <%= pi.ingredient_name || 'Unknown' %>
                    </span>
                    <span class="ml-2 inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium 
                      <%= pi.checked ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                      <%= pi.checked ? 'Ready' : 'Pending' %>
                    </span>
                  </div>
                <% end %>
              </div>
            <% else %>
              <span class="text-gray-500">No ingredients</span>
            <% end %>
          </div>
        </td>
        <!-- Machines -->
        <td class="px-6 py-4">
          <div class="text-sm text-gray-900 space-y-1">
            <% if unit_batch.produce&.machine %>
              <div class="flex items-center">
                <svg class="w-3 h-3 text-yellow-600 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                </svg>
                <span class="text-yellow-800">Produce: <%= unit_batch.produce.machine.name %></span>
              </div>
            <% end %>
            <% if unit_batch.package&.machine %>
              <div class="flex items-center">
                <svg class="w-3 h-3 text-green-600 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
                <span class="text-green-800">Package: <%= unit_batch.package.machine.name %></span>
              </div>
            <% end %>
            <% unless unit_batch.produce&.machine || unit_batch.package&.machine %>
              <span class="text-gray-500">No machines assigned</span>
            <% end %>
          </div>
        </td>
        <!-- Status -->
        <td class="px-6 py-4">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
            <%= case unit_batch.status
                when 'preparation' then 'bg-blue-100 text-blue-800'
                when 'production' then 'bg-yellow-100 text-yellow-800'
                when 'testing' then 'bg-purple-100 text-purple-800'
                when 'packing' then 'bg-green-100 text-green-800'
                when 'cancelled' then 'bg-red-100 text-red-800'
                else 'bg-gray-100 text-gray-800'
                end %>">
            <div class="w-2 h-2 rounded-full mr-2 
              <%= case unit_batch.status
                  when 'preparation' then 'bg-blue-600'
                  when 'production' then 'bg-yellow-600'
                  when 'testing' then 'bg-purple-600'
                  when 'packing' then 'bg-green-600'
                  when 'cancelled' then 'bg-red-600'
                  else 'bg-gray-600'
                  end %>"></div>
            <%= unit_batch.status.humanize %>
          </span>
        </td>
      </tr>
    <% end %>
  <% end %>
</tbody>
