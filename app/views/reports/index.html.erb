<% content_for :title, "Reports" %>
<!-- Two-Column Layout -->
<div class="bg-gray-50 w-screen">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
    <!-- Page Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Reports</h1>
          <p class="mt-1 text-sm text-gray-600">Generate and view factory reports</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to reports_path(format: :pdf, report_type: @report_type, start_date: @start_date, end_date: @end_date),
              class: "inline-flex items-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Download PDF
          <% end %>
        </div>
      </div>
    </div>
    <!-- Two Column Layout -->
    <div class="grid grid-cols-12 gap-6">
      <!-- Left Sidebar: Filters -->
      <div class="col-span-12 lg:col-span-4 space-y-6">
        <!-- Filter Card -->
        <div class="relative bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 rounded-2xl shadow-lg border border-blue-100 p-6 backdrop-blur-sm">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-purple-500/5 rounded-2xl"></div>
          <div class="relative">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.121A1 1 0 013 6.414V4z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-lg font-bold text-gray-900">Report Filters</h3>
                <p class="text-xs text-gray-600">Customize your report</p>
              </div>
            </div>
            <%= form_with url: reports_path, method: :get, local: true, class: "space-y-4", id: "report-form" do |f| %>
              <!-- Report Type -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-blue-500 rounded-full mr-2"></span>
                  Report Type
                </label>
                <%= f.select :report_type,
                    options_for_select([
                      ['All Unit Batches', 'all'],
                      ['Core Processes', 'core']
                    ], @report_type),
                    {},
                    { class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md",
                      onchange: "this.form.requestSubmit()" } %>
              </div>
              <!-- Start Date -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-purple-500 rounded-full mr-2"></span>
                  Start Date
                </label>
                <%= f.date_field :start_date,
                    value: @start_date,
                    min: @min_date,
                    max: Date.current,
                    class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md",
                    onchange: "this.form.requestSubmit()" %>
              </div>
              <!-- End Date -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                  End Date
                </label>
                <%= f.date_field :end_date,
                    value: @end_date,
                    min: @min_date,
                    max: Date.current,
                    class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md",
                    onchange: "this.form.requestSubmit()" %>
              </div>
              <!-- Action Buttons -->
              <div class="flex space-x-3 pt-2">
                <%= f.submit "üîç Generate Report", class: "flex-1 bg-gradient-to-r from-blue-500 to-indigo-600 text-white px-4 py-3 rounded-xl hover:from-blue-600 hover:to-indigo-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105 font-semibold" %>
                <%= link_to "Clear Filters", reports_path, class: "px-4 py-3 border border-gray-200 text-gray-700 rounded-xl hover:bg-white/80 transition-all duration-200 shadow-sm hover:shadow-md bg-white/50 backdrop-blur-sm" %>
              </div>
            <% end %>
          </div>
        </div>
        <!-- Quick Actions -->
        <div class="relative bg-gradient-to-br from-rose-50 via-pink-50 to-fuchsia-50 rounded-2xl shadow-lg border border-rose-100 p-6 backdrop-blur-sm">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-rose-500/5 to-fuchsia-500/5 rounded-2xl"></div>
          <div class="relative">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-gradient-to-r from-rose-500 to-pink-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-lg font-bold text-gray-900">Quick Reports</h3>
                <p class="text-xs text-gray-600">One-click generation</p>
              </div>
            </div>
            <div class="space-y-2">
              <%= link_to reports_path(report_type: 'all', start_date: Date.current, end_date: Date.current),
                  class: "group block w-full text-left px-4 py-3 text-sm font-medium text-gray-700 rounded-xl hover:bg-white/60 transition-all duration-200 bg-white/30 backdrop-blur-sm border border-white/20 hover:shadow-md transform hover:scale-105" do %>
                <span class="flex items-center">
                  <span class="text-lg mr-3">üìÖ</span>
                  <span class="group-hover:text-gray-900 transition-colors">Today's All Batches</span>
                </span>
              <% end %>
              <%= link_to reports_path(report_type: 'core', start_date: Date.current, end_date: Date.current),
                  class: "group block w-full text-left px-4 py-3 text-sm font-medium text-gray-700 rounded-xl hover:bg-white/60 transition-all duration-200 bg-white/30 backdrop-blur-sm border border-white/20 hover:shadow-md transform hover:scale-105" do %>
                <span class="flex items-center">
                  <span class="text-lg mr-3">‚öôÔ∏è</span>
                  <span class="group-hover:text-gray-900 transition-colors">Today's Core Processes</span>
                </span>
              <% end %>
              <%= link_to reports_path(report_type: 'all', start_date: 1.week.ago.to_date, end_date: Date.current),
                  class: "group block w-full text-left px-4 py-3 text-sm font-medium text-gray-700 rounded-xl hover:bg-white/60 transition-all duration-200 bg-white/30 backdrop-blur-sm border border-white/20 hover:shadow-md transform hover:scale-105" do %>
                <span class="flex items-center">
                  <span class="text-lg mr-3">üìä</span>
                  <span class="group-hover:text-gray-900 transition-colors">Last 7 Days</span>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- Right Content: Report Data -->
      <div class="col-span-12 lg:col-span-8 space-y-6">
        <!-- Report Summary -->
        <div class="relative bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 rounded-2xl shadow-lg border border-blue-100 p-6 backdrop-blur-sm">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-purple-500/5 rounded-2xl"></div>
          <div class="relative">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-lg font-bold text-gray-900">Report Summary</h3>
                <p class="text-xs text-gray-600"><%= @report_type.humanize %> Report ‚Ä¢ <%= @start_date.strftime("%b %d, %Y") %> - <%= @end_date.strftime("%b %d, %Y") %></p>
              </div>
            </div>
            <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
              <div class="flex flex-col items-center p-3 bg-white/40 backdrop-blur-sm rounded-xl border border-white/20">
                <span class="text-sm font-medium text-gray-700 flex items-center mb-1">
                  <span class="w-3 h-3 bg-blue-500 rounded-full mr-2 animate-pulse"></span>
                  Total Batches
                </span>
                <span class="font-bold text-gray-900 text-xl"><%= @report_data.values.flatten.count %></span>
              </div>
              <div class="flex flex-col items-center p-3 bg-white/40 backdrop-blur-sm rounded-xl border border-white/20">
                <span class="text-sm font-medium text-gray-700 flex items-center mb-1">
                  <span class="w-3 h-3 bg-green-500 rounded-full mr-2 animate-pulse"></span>
                  Completed
                </span>
                <span class="font-bold text-green-600 text-xl"><%= @report_data.values.flatten.select { |ub| ub.status == 'packing' }.count %></span>
              </div>
              <div class="flex flex-col items-center p-3 bg-white/40 backdrop-blur-sm rounded-xl border border-white/20">
                <span class="text-sm font-medium text-gray-700 flex items-center mb-1">
                  <span class="w-3 h-3 bg-yellow-500 rounded-full mr-2 animate-pulse"></span>
                  In Progress
                </span>
                <span class="font-bold text-yellow-600 text-xl"><%= @report_data.values.flatten.select { |ub| ['preparation', 'production'].include?(ub.status) }.count %></span>
              </div>
              <div class="flex flex-col items-center p-3 bg-white/40 backdrop-blur-sm rounded-xl border border-white/20">
                <span class="text-sm font-medium text-gray-700 flex items-center mb-1">
                  <span class="w-3 h-3 bg-gray-500 rounded-full mr-2 animate-pulse"></span>
                  Cancelled
                </span>
                <span class="font-bold text-gray-600 text-xl"><%= @report_data.values.flatten.select { |ub| ub.status == 'cancelled' }.count %></span>
              </div>
            </div>
          </div>
        </div>
        <!-- Report Data Table -->
        <div class="relative bg-gradient-to-br from-slate-50 via-gray-50 to-zinc-50 rounded-2xl shadow-lg border border-gray-100 overflow-hidden backdrop-blur-sm">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-slate-500/5 to-zinc-500/5 rounded-2xl"></div>
          <!-- Header -->
          <div class="relative px-6 py-4 border-b border-gray-200/50 bg-white/30 backdrop-blur-sm">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-8 h-8 bg-gradient-to-r from-slate-600 to-gray-700 rounded-lg flex items-center justify-center shadow-md mr-3">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900"><%= @report_type.humanize %> Report Data</h3>
              </div>
              <span class="text-sm text-gray-600 bg-white/50 backdrop-blur-sm px-3 py-1 rounded-lg border border-white/20">
                <%= @report_data.values.flatten.count %> records
              </span>
            </div>
          </div>
          <% if @report_data.any? %>
            <!-- Table -->
            <div class="relative overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200/50">
                <thead class="bg-gradient-to-r from-gray-50 to-slate-50 backdrop-blur-sm">
                  <tr>
                    <% if @report_type == 'core' %>
                      <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Batch Code</th>
                      <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Product</th>
                      <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Produce Machine</th>
                      <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Package Machine</th>
                      <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Unchecked Ingredients</th>
                    <% else %>
                      <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Unit Batch</th>
                      <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Product</th>
                      <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Status</th>
                      <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Processes</th>
                      <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
                    <% end %>
                  </tr>
                </thead>
                <tbody class="bg-white/40 backdrop-blur-sm divide-y divide-gray-200/30">
                  <% @report_data.each do |date, unit_batches| %>
                    <!-- Date Header Row -->
                    <tr class="bg-gradient-to-r from-blue-50 to-indigo-50">
                      <td colspan="<%= @report_type == 'core' ? '5' : '5' %>" class="px-6 py-3">
                        <div class="flex items-center">
                          <svg class="w-4 h-4 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                          </svg>
                          <span class="text-sm font-semibold text-blue-900"><%= date.strftime("%B %d, %Y") %></span>
                          <span class="ml-2 text-xs text-blue-700 bg-blue-100 px-2 py-1 rounded-full">
                            <%= unit_batches.count %> batch<%= 'es' if unit_batches.count != 1 %>
                          </span>
                        </div>
                      </td>
                    </tr>
                    <% unit_batches.each do |unit_batch| %>
                      <%
                        # Status-based row coloring
                        if @report_type == 'core'
                          status_classes = 'bg-white hover:bg-gray-50'
                        else
                          status_classes = case unit_batch.status
                                          when 'packing' then 'bg-green-50 hover:bg-green-100'
                                          when 'preparation' then 'bg-blue-50 hover:bg-blue-100'
                                          when 'production' then 'bg-yellow-50 hover:bg-yellow-100'
                                          when 'testing' then 'bg-purple-50 hover:bg-purple-100'
                                          when 'cancelled' then 'bg-red-50 hover:bg-red-100'
                                          else 'bg-white hover:bg-gray-50'
                                          end
                        end

                        row_classes = [status_classes, "transition-all duration-200 cursor-pointer"]
                      %>
                      <tr class="<%= row_classes.join(' ') %>" onclick="<%= @report_type == 'core' ? '' : "window.location.href='#{unit_batch_path(unit_batch)}'" %>">
                        <% if @report_type == 'core' %>
                          <!-- Core Process Columns -->
                          <td class="px-6 py-4">
                            <div class="text-sm font-medium text-gray-900"><%= unit_batch.batch_code %></div>
                          </td>
                          <td class="px-6 py-4">
                            <div class="text-sm text-gray-900"><%= unit_batch.product&.name || 'No product' %></div>
                          </td>
                          <td class="px-6 py-4">
                            <div class="text-sm text-gray-900"><%= unit_batch.produce&.machine&.name || 'N/A' %></div>
                          </td>
                          <td class="px-6 py-4">
                            <div class="text-sm text-gray-900"><%= unit_batch.package&.machine&.name || 'N/A' %></div>
                          </td>
                          <td class="px-6 py-4">
                            <div class="text-sm text-gray-900">
                              <% if unit_batch.prepare&.prepare_ingredients %>
                                <% unchecked = unit_batch.prepare.prepare_ingredients.select { |pi| !pi.checked } %>
                                <% if unchecked.any? %>
                                  <span class="text-red-600">
                                    <%= unchecked.map { |pi| pi.ingredient_name || 'Unknown' }.join(', ') %>
                                  </span>
                                <% else %>
                                  <span class="text-green-600">All checked</span>
                                <% end %>
                              <% else %>
                                <span class="text-gray-500">N/A</span>
                              <% end %>
                            </div>
                          </td>
                        <% else %>
                          <!-- All Unit Batches Columns -->
                          <td class="px-6 py-4">
                            <div class="text-sm font-medium text-gray-900"><%= unit_batch.unit_id %></div>
                            <div class="text-xs text-gray-500"><%= unit_batch.batch_code %></div>
                          </td>
                          <td class="px-6 py-4">
                            <div class="text-sm text-gray-900"><%= unit_batch.product&.name || 'No product' %></div>
                            <div class="text-xs text-gray-500">Qty: <%= unit_batch.quantity %></div>
                          </td>
                          <td class="px-6 py-4">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                              <%= case unit_batch.status
                                  when 'preparation' then 'bg-blue-100 text-blue-800'
                                  when 'production' then 'bg-yellow-100 text-yellow-800'
                                  when 'testing' then 'bg-purple-100 text-purple-800'
                                  when 'packing' then 'bg-green-100 text-green-800'
                                  when 'cancelled' then 'bg-red-100 text-red-800'
                                  else 'bg-gray-100 text-gray-800'
                                  end %>">
                              <%= unit_batch.status.humanize %>
                            </span>
                          </td>
                          <td class="px-6 py-4">
                            <div class="flex space-x-1">
                              <% if unit_batch.prepare %>
                                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800">
                                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                  </svg>
                                  Prepare
                                </span>
                              <% end %>
                              <% if unit_batch.produce %>
                                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                  </svg>
                                  Produce
                                </span>
                              <% end %>
                              <% if unit_batch.package %>
                                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800">
                                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                                  </svg>
                                  Package
                                </span>
                              <% end %>
                            </div>
                          </td>
                          <td class="px-6 py-4 text-sm" onclick="event.stopPropagation()">
                            <%= link_to "View", unit_batch_path(unit_batch),
                                class: "text-blue-600 hover:text-blue-900 transition-colors" %>
                          </td>
                        <% end %>
                      </tr>
                    <% end %>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <!-- Empty State -->
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No report data found</h3>
              <p class="mt-1 text-sm text-gray-500">Try adjusting your date range or report type.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
