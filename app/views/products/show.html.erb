<% content_for :title, @product.name %>
<div class="bg-gray-50 min-h-screen">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
    <!-- Page Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-bold text-gray-900"><%= @product.name %></h1>
          <p class="mt-2 text-lg text-gray-600">Complete product information and management</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to products_path, 
              class: "inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to List
          <% end %>
          <% if Current.session&.user&.can_create_products? && (@product.user == Current.session.user || Current.session.user.head?) %>
            <%= link_to edit_product_path(@product), 
                class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Edit Product
            <% end %>
          <% end %>
        </div>
      </div>
      <!-- Main Grid Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Left Column: Product Details -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Product Overview Card -->
          <div class="relative bg-gradient-to-br from-emerald-50 via-teal-50 to-cyan-50 rounded-2xl shadow-lg border border-emerald-100 p-6 backdrop-blur-sm">
            <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/5 to-cyan-500/5 rounded-2xl"></div>
            <div class="relative">
              <div class="flex items-center mb-6">
                <div class="w-16 h-16 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-2xl flex items-center justify-center shadow-lg">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                  </svg>
                </div>
                <div class="ml-4 flex-1">
                  <h2 class="text-2xl font-bold text-gray-900"><%= @product.name %></h2>
                  <div class="flex items-center mt-1">
                    <span class="text-sm text-gray-600 mr-4">Product Code: <span class="font-mono font-semibold"><%= @product.product_code %></span></span>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                      </svg>
                      Active
                    </span>
                  </div>
                </div>
              </div>
              <!-- Product Details Grid -->
              <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
                  <div class="text-xs font-medium text-gray-600 mb-1">Product ID</div>
                  <div class="text-lg font-bold text-gray-900 font-mono">#<%= @product.id %></div>
                </div>
                <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
                  <div class="text-xs font-medium text-gray-600 mb-1">Created</div>
                  <div class="text-sm font-bold text-gray-900"><%= @product.created_at.strftime("%b %d, %Y") %></div>
                  <div class="text-xs text-gray-500"><%= time_ago_in_words(@product.created_at) %> ago</div>
                </div>
                <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
                  <div class="text-xs font-medium text-gray-600 mb-1">Updated</div>
                  <div class="text-sm font-bold text-gray-900"><%= @product.updated_at.strftime("%b %d, %Y") %></div>
                  <div class="text-xs text-gray-500"><%= time_ago_in_words(@product.updated_at) %> ago</div>
                </div>
                <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
                  <div class="text-xs font-medium text-gray-600 mb-1">Ingredients</div>
                  <div class="text-lg font-bold text-gray-900"><%= @product.ingredients.count %></div>
                  <div class="text-xs text-gray-500">components</div>
                </div>
              </div>
            </div>
          </div>
          <!-- Shelf Life Information Card -->
          <div class="relative bg-gradient-to-br from-amber-50 via-orange-50 to-red-50 rounded-2xl shadow-lg border border-amber-100 p-6 backdrop-blur-sm">
            <div class="absolute inset-0 bg-gradient-to-r from-amber-500/5 to-red-500/5 rounded-2xl"></div>
            <div class="relative">
              <div class="flex items-center mb-6">
                <div class="w-12 h-12 bg-gradient-to-r from-amber-500 to-orange-600 rounded-xl flex items-center justify-center shadow-lg">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-xl font-bold text-gray-900">Shelf Life Information</h3>
                  <p class="text-sm text-gray-600">Product expiration and storage periods</p>
                </div>
              </div>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div class="bg-white/50 backdrop-blur-sm rounded-xl p-4 border border-white/30 text-center">
                  <div class="text-2xl font-bold text-orange-600 mb-1"><%= @product.period_year || 0 %></div>
                  <div class="text-xs font-medium text-gray-600 uppercase tracking-wider">Years</div>
                </div>
                <div class="bg-white/50 backdrop-blur-sm rounded-xl p-4 border border-white/30 text-center">
                  <div class="text-2xl font-bold text-orange-600 mb-1"><%= @product.period_month || 0 %></div>
                  <div class="text-xs font-medium text-gray-600 uppercase tracking-wider">Months</div>
                </div>
                <div class="bg-white/50 backdrop-blur-sm rounded-xl p-4 border border-white/30 text-center">
                  <div class="text-2xl font-bold text-orange-600 mb-1"><%= @product.period_week || 0 %></div>
                  <div class="text-xs font-medium text-gray-600 uppercase tracking-wider">Weeks</div>
                </div>
                <div class="bg-white/50 backdrop-blur-sm rounded-xl p-4 border border-white/30 text-center">
                  <div class="text-2xl font-bold text-orange-600 mb-1"><%= @product.period_day || 0 %></div>
                  <div class="text-xs font-medium text-gray-600 uppercase tracking-wider">Days</div>
                </div>
              </div>
              <div class="mt-4 p-4 bg-amber-100/50 rounded-lg">
                <div class="text-sm text-amber-800">
                  <span class="font-semibold">Estimated Total Shelf Life:</span>
                  <%= (@product.period_year || 0) * 365 + (@product.period_month || 0) * 30 + (@product.period_week || 0) * 7 + (@product.period_day || 0) %> days
                </div>
              </div>
            </div>
          </div>
          <!-- Production Statistics Card -->
          <div class="relative bg-gradient-to-br from-purple-50 via-violet-50 to-indigo-50 rounded-2xl shadow-lg border border-purple-100 p-6 backdrop-blur-sm">
            <div class="absolute inset-0 bg-gradient-to-r from-purple-500/5 to-indigo-500/5 rounded-2xl"></div>
            <div class="relative">
              <div class="flex items-center mb-6">
                <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-xl font-bold text-gray-900">Production Statistics</h3>
                  <p class="text-sm text-gray-600">Unit batches and preparation data</p>
                </div>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="bg-white/50 backdrop-blur-sm rounded-xl p-6 border border-white/30 text-center">
                  <div class="text-3xl font-bold text-purple-600 mb-2"><%= @product.unit_batches.count %></div>
                  <div class="text-sm font-medium text-gray-700">Unit Batches</div>
                  <div class="text-xs text-gray-500 mt-1">Total created</div>
                </div>
                <div class="bg-white/50 backdrop-blur-sm rounded-xl p-6 border border-white/30 text-center">
                  <div class="text-3xl font-bold text-indigo-600 mb-2"><%= @product.prepares.count %></div>
                  <div class="text-sm font-medium text-gray-700">Preparations</div>
                  <div class="text-xs text-gray-500 mt-1">Total created</div>
                </div>
                <div class="bg-white/50 backdrop-blur-sm rounded-xl p-6 border border-white/30 text-center">
                  <div class="text-3xl font-bold text-violet-600 mb-2">
                    <%= @product.unit_batches.where(status: 'completed').count %>
                  </div>
                  <div class="text-sm font-medium text-gray-700">Completed</div>
                  <div class="text-xs text-gray-500 mt-1">Finished batches</div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Right Column: Additional Information -->
        <div class="space-y-6">
          <!-- Creator Information Card -->
          <div class="relative bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 rounded-2xl shadow-lg border border-blue-100 p-6 backdrop-blur-sm">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-purple-500/5 rounded-2xl"></div>
            <div class="relative">
              <div class="flex items-center mb-4">
                <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-lg font-bold text-gray-900">Created By</h3>
                </div>
              </div>
              <div class="bg-white/50 backdrop-blur-sm rounded-xl p-4 border border-white/30">
                <div class="text-sm text-gray-600 mb-1">User</div>
                <div class="font-semibold text-gray-900"><%= @product.user.email_address %></div>
                <div class="flex items-center mt-2">
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium capitalize
                  <%= case @product.user.role
                      when 'head' then 'bg-red-100 text-red-800'
                      when 'manager' then 'bg-orange-100 text-orange-800'
                      when 'supervisor' then 'bg-yellow-100 text-yellow-800'
                      when 'tester' then 'bg-green-100 text-green-800'
                      when 'worker' then 'bg-blue-100 text-blue-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                    <%= @product.user.role %>
                  </span>
                </div>
              </div>
            </div>
          </div>
          <!-- Quick Actions Card -->
          <div class="relative bg-gradient-to-br from-rose-50 via-pink-50 to-fuchsia-50 rounded-2xl shadow-lg border border-rose-100 p-6 backdrop-blur-sm">
            <div class="absolute inset-0 bg-gradient-to-r from-rose-500/5 to-fuchsia-500/5 rounded-2xl"></div>
            <div class="relative">
              <div class="flex items-center mb-4">
                <div class="w-10 h-10 bg-gradient-to-r from-rose-500 to-pink-600 rounded-xl flex items-center justify-center shadow-lg">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-lg font-bold text-gray-900">Quick Actions</h3>
                </div>
              </div>
              <div class="space-y-3">
                <%= link_to unit_batches_path(q: { product_id_eq: @product.id }), 
                  class: "block w-full text-left px-4 py-3 text-sm font-medium text-gray-700 rounded-xl hover:bg-white/60 transition-all duration-200 bg-white/30 backdrop-blur-sm border border-white/20" do %>
                  <div class="flex items-center">
                    <span class="text-lg mr-3">ðŸ“¦</span>
                    <div>
                      <div class="font-medium">View Unit Batches</div>
                      <div class="text-xs text-gray-500">See all production batches</div>
                    </div>
                  </div>
                <% end %>
                <%= link_to prepares_path(q: { unit_batch_product_id_eq: @product.id }), 
                  class: "block w-full text-left px-4 py-3 text-sm font-medium text-gray-700 rounded-xl hover:bg-white/60 transition-all duration-200 bg-white/30 backdrop-blur-sm border border-white/20" do %>
                  <div class="flex items-center">
                    <span class="text-lg mr-3">ðŸ“‹</span>
                    <div>
                      <div class="font-medium">View Preparations</div>
                      <div class="text-xs text-gray-500">See all preparation tasks</div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <!-- Recent Activity Card -->
          <div class="relative bg-gradient-to-br from-gray-50 via-slate-50 to-zinc-50 rounded-2xl shadow-lg border border-gray-200 p-6 backdrop-blur-sm">
            <div class="absolute inset-0 bg-gradient-to-r from-gray-500/5 to-zinc-500/5 rounded-2xl"></div>
            <div class="relative">
              <div class="flex items-center mb-4">
                <div class="w-10 h-10 bg-gradient-to-r from-gray-600 to-slate-700 rounded-xl flex items-center justify-center shadow-lg">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-lg font-bold text-gray-900">Recent Activity</h3>
                </div>
              </div>
              <div class="space-y-3">
                <% recent_batches = @product.unit_batches.order(created_at: :desc).limit(3) %>
                <% if recent_batches.any? %>
                  <% recent_batches.each do |batch| %>
                    <div class="bg-white/30 backdrop-blur-sm rounded-lg p-3 border border-white/20">
                      <div class="text-sm font-medium text-gray-900"><%= batch.unit_id %></div>
                      <div class="text-xs text-gray-500">
                        <%= batch.created_at.strftime("%b %d, %Y") %> â€¢ 
                        <span class="capitalize"><%= batch.status %></span>
                      </div>
                    </div>
                  <% end %>
                <% else %>
                  <div class="text-center py-4">
                    <div class="text-sm text-gray-500">No recent activity</div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Ingredients Section (Full Width) -->
      <div class="mt-6">
        <div class="relative bg-gradient-to-br from-emerald-50 via-teal-50 to-cyan-50 rounded-2xl shadow-lg border border-emerald-100 backdrop-blur-sm"
           data-controller="ingredient-form" 
           data-ingredient-form-product-id-value="<%= @product.id %>">
          <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/5 to-cyan-500/5 rounded-2xl"></div>
          <div class="relative p-6">
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center">
                <div class="w-12 h-12 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center shadow-lg">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-2xl font-bold text-gray-900">Product Ingredients</h3>
                  <p class="text-sm text-gray-600 ingredient-description"><%= pluralize(@product.ingredients.count, 'ingredient') %> defined</p>
                </div>
              </div>
              <% if Current.session&.user&.can_create_products? && (@product.user == Current.session.user || Current.session.user.head?) %>
                <button data-action="click->ingredient-form#showForm" 
                  data-ingredient-form-target="addButton"
                  class="inline-flex items-center px-4 py-2 text-sm font-semibold text-emerald-700 bg-emerald-100 rounded-lg hover:bg-emerald-200 transition-colors duration-200">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                  </svg>
                  Add Ingredient
                </button>
              <% end %>
            </div>
            <!-- Inline Add Form (Initially Hidden) -->
            <% if Current.session&.user&.can_create_products? && (@product.user == Current.session.user || Current.session.user.head?) %>
              <div data-ingredient-form-target="form" class="hidden mb-6">
                <div class="bg-white/60 backdrop-blur-sm rounded-xl p-4 border border-white/30 shadow-lg">
                  <h4 class="text-lg font-semibold text-gray-900 mb-3">Add New Ingredient</h4>
                  <div class="flex items-end space-x-3">
                    <div class="flex-1">
                      <label class="block text-sm font-medium text-gray-700 mb-1">Ingredient Name</label>
                      <input type="text" 
                           data-ingredient-form-target="nameInput"
                           placeholder="Enter ingredient name"
                           class="block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:ring-emerald-500 focus:border-emerald-500">
                    </div>
                    <div class="flex space-x-2">
                      <button data-action="click->ingredient-form#submit"
                        data-ingredient-form-target="submitButton"
                        class="inline-flex items-center px-4 py-2 bg-emerald-600 text-white text-sm font-medium rounded-lg hover:bg-emerald-700 transition-colors duration-200">
                        Add
                      </button>
                      <button data-action="click->ingredient-form#cancel"
                        data-ingredient-form-target="cancelButton"
                        class="inline-flex items-center px-4 py-2 bg-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-400 transition-colors duration-200">
                        Cancel
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            <!-- Ingredients List -->
            <div data-ingredient-form-target="list">
              <% if @product.ingredients.any? %>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 ingredients-grid">
                  <% @product.ingredients.order(:name).each do |ingredient| %>
                    <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20 group hover:bg-white/60 transition-colors duration-200 ingredient-card" data-ingredient-id="<%= ingredient.id %>">
                      <div class="flex items-center justify-between">
                        <div class="flex items-center flex-1 min-w-0">
                          <div class="w-8 h-8 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-lg flex items-center justify-center mr-3">
                            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                            </svg>
                          </div>
                          <span class="font-medium text-gray-900 truncate"><%= ingredient.name %></span>
                        </div>
                        <% if Current.session&.user&.can_create_products? && (@product.user == Current.session.user || Current.session.user.head?) %>
                          <div class="flex items-center space-x-1 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                            <button data-action="click->ingredient-form#removeIngredient" 
                              class="inline-flex items-center p-1 text-red-600 hover:text-red-800 rounded">
                              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                              </svg>
                            </button>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <!-- Empty State for Ingredients -->
                <div class="bg-white/40 backdrop-blur-sm rounded-xl p-12 border border-white/20 text-center empty-state">
                  <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                  </div>
                  <h4 class="text-lg font-medium text-gray-900 mb-2">No ingredients yet</h4>
                  <p class="text-sm text-gray-500 mb-6">Add ingredients to define what goes into this product.</p>
                  <% if Current.session&.user&.can_create_products? && (@product.user == Current.session.user || Current.session.user.head?) %>
                    <button data-action="click->ingredient-form#showForm"
                      class="inline-flex items-center justify-center rounded-xl bg-gradient-to-r from-emerald-600 to-teal-600 px-6 py-3 text-sm font-semibold text-white shadow-lg hover:from-emerald-500 hover:to-teal-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600 transform hover:scale-105 transition-all duration-200">
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                      </svg>
                      Add First Ingredient
                    </button>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="relative bg-gradient-to-br from-purple-50 via-violet-50 to-indigo-50 rounded-2xl shadow-lg border border-purple-100 backdrop-blur-sm"
           data-controller="ingredient-form" 
           data-ingredient-form-product-id-value="<%= @product.id %>">
    <div class="absolute inset-0 bg-gradient-to-r from-purple-500/5 to-indigo-500/5 rounded-2xl"></div>
    <div class="relative p-6">
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center">
          <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-xl font-bold text-gray-900">Ingredients</h3>
            <p class="text-sm text-gray-600 ingredient-description"><%= pluralize(@product.ingredients.count, 'ingredient') %> defined</p>
          </div>
        </div>
        <% if Current.session&.user&.can_create_products? && (@product.user == Current.session.user || Current.session.user.head?) %>
          <button data-action="click->ingredient-form#showForm" 
            data-ingredient-form-target="addButton"
            class="inline-flex items-center px-3 py-2 text-sm font-semibold text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors duration-200">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Ingredient
          </button>
        <% end %>
      </div>
      <!-- Inline Add Form (Initially Hidden) -->
      <% if Current.session&.user&.can_create_products? && (@product.user == Current.session.user || Current.session.user.head?) %>
        <div data-ingredient-form-target="form" class="hidden mb-6">
          <div class="bg-white/60 backdrop-blur-sm rounded-xl p-4 border border-white/30 shadow-lg">
            <h4 class="text-lg font-semibold text-gray-900 mb-3">Add New Ingredient</h4>
            <div class="flex items-end space-x-3">
              <div class="flex-1">
                <label class="block text-sm font-medium text-gray-700 mb-1">Ingredient Name</label>
                <input type="text" 
                           data-ingredient-form-target="nameInput"
                           placeholder="Enter ingredient name"
                           class="block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:ring-purple-500 focus:border-purple-500">
              </div>
              <div class="flex space-x-2">
                <button data-action="click->ingredient-form#submit"
                  data-ingredient-form-target="submitButton"
                  class="inline-flex items-center px-4 py-2 bg-purple-600 text-white text-sm font-medium rounded-lg hover:bg-purple-700 transition-colors duration-200">
                  Add
                </button>
                <button data-action="click->ingredient-form#cancel"
                  data-ingredient-form-target="cancelButton"
                  class="inline-flex items-center px-4 py-2 bg-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-400 transition-colors duration-200">
                  Cancel
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <!-- Ingredients List -->
      <div data-ingredient-form-target="list">
        <% if @product.ingredients.any? %>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 ingredients-grid">
            <% @product.ingredients.order(:name).each do |ingredient| %>
              <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20 group hover:bg-white/60 transition-colors duration-200 ingredient-card" data-ingredient-id="<%= ingredient.id %>">
                <div class="flex items-center justify-between">
                  <div class="flex items-center flex-1 min-w-0">
                    <div class="w-8 h-8 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg flex items-center justify-center mr-3">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                      </svg>
                    </div>
                    <span class="font-medium text-gray-900 truncate"><%= ingredient.name %></span>
                  </div>
                  <% if Current.session&.user&.can_create_products? && (@product.user == Current.session.user || Current.session.user.head?) %>
                    <div class="flex items-center space-x-1 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                      <button data-action="click->ingredient-form#removeIngredient" 
                        class="inline-flex items-center p-1 text-red-600 hover:text-red-800 rounded">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      </button>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <!-- Empty State for Ingredients -->
          <div class="bg-white/40 backdrop-blur-sm rounded-xl p-12 border border-white/20 text-center empty-state">
            <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <h4 class="text-lg font-medium text-gray-900 mb-2">No ingredients yet</h4>
            <p class="text-sm text-gray-500 mb-6">Add ingredients to define what goes into this product.</p>
            <% if Current.session&.user&.can_create_products? && (@product.user == Current.session.user || Current.session.user.head?) %>
              <button data-action="click->ingredient-form#showForm"
                class="inline-flex items-center justify-center rounded-xl bg-gradient-to-r from-purple-600 to-indigo-600 px-6 py-3 text-sm font-semibold text-white shadow-lg hover:from-purple-500 hover:to-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-600 transform hover:scale-105 transition-all duration-200">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add First Ingredient
              </button>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
</div>
