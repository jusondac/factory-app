<div class="bg-gray-50 min-h-screen">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
    <!-- Page Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Product Management</h1>
          <p class="mt-1 text-sm text-gray-600">Manage and oversee all factory products and their ingredients</p>
        </div>
        <% if Current.session&.user&.can_create_products? %>
          <%= link_to new_product_path, 
              class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Product
          <% end %>
        <% end %>
      </div>
    </div>
    <!-- Two Column Layout -->
    <div class="grid grid-cols-12 gap-6">
      <!-- Left Sidebar: Filters & Info -->
      <div class="col-span-12 lg:col-span-4 space-y-6">
        <!-- Filter Card -->
        <div class="relative bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 rounded-2xl shadow-lg border border-blue-100 p-6 backdrop-blur-sm">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-purple-500/5 rounded-2xl"></div>
          <div class="relative">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-lg font-bold text-gray-900">Product Search</h3>
                <p class="text-xs text-gray-600">Find products quickly</p>
              </div>
            </div>
            <%= search_form_for @q, local: true, class: "space-y-4" do |f| %>
              <!-- Product Name -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-blue-500 rounded-full mr-2"></span>
                  Product Name
                </label>
                <%= f.search_field :name_cont, 
                    placeholder: "Search by product name...", 
                    class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md" %>
              </div>
              <!-- Created By -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-purple-500 rounded-full mr-2"></span>
                  Created By
                </label>
                <%= f.search_field :user_email_address_cont, 
                    placeholder: "Search by creator email...", 
                    class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md" %>
              </div>
              <!-- Action Buttons -->
              <div class="flex space-x-3 pt-2">
                <%= f.submit "🔍 Search", class: "flex-1 bg-gradient-to-r from-blue-500 to-purple-600 text-white px-4 py-3 rounded-xl hover:from-blue-600 hover:to-purple-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105 font-semibold" %>
                <%= link_to "Clear", products_path, class: "px-4 py-3 border border-gray-200 text-gray-700 rounded-xl hover:bg-white/80 transition-all duration-200 shadow-sm hover:shadow-md bg-white/50 backdrop-blur-sm" %>
              </div>
            <% end %>
          </div>
        </div>
        <!-- Quick Actions -->
        <div class="relative bg-gradient-to-br from-rose-50 via-pink-50 to-fuchsia-50 rounded-2xl shadow-lg border border-rose-100 p-6 backdrop-blur-sm">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-rose-500/5 to-fuchsia-500/5 rounded-2xl"></div>
          <div class="relative">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-gradient-to-r from-rose-500 to-pink-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-lg font-bold text-gray-900">Quick Filters</h3>
                <p class="text-xs text-gray-600">One-click shortcuts</p>
              </div>
            </div>
            <div class="space-y-2">
              <% if Current.session&.user %>
                <%= link_to products_path(q: { user_email_address_eq: Current.session.user.email_address }), 
                    class: "group block w-full text-left px-4 py-3 text-sm font-medium text-gray-700 rounded-xl hover:bg-white/60 transition-all duration-200 bg-white/30 backdrop-blur-sm border border-white/20 hover:shadow-md transform hover:scale-105" do %>
                  <span class="flex items-center">
                    <span class="text-lg mr-3">👤</span>
                    <span class="group-hover:text-gray-900 transition-colors">My Products</span>
                  </span>
                <% end %>
              <% end %>
              <%= link_to products_path(q: { created_at_gteq: 7.days.ago }), 
                  class: "group block w-full text-left px-4 py-3 text-sm font-medium text-gray-700 rounded-xl hover:bg-white/60 transition-all duration-200 bg-white/30 backdrop-blur-sm border border-white/20 hover:shadow-md transform hover:scale-105" do %>
                <span class="flex items-center">
                  <span class="text-lg mr-3">🕒</span>
                  <span class="group-hover:text-gray-900 transition-colors">Recent (7 days)</span>
                </span>
              <% end %>
              <%= link_to products_path, 
                  class: "group block w-full text-left px-4 py-3 text-sm font-medium text-gray-700 rounded-xl hover:bg-white/60 transition-all duration-200 bg-white/30 backdrop-blur-sm border border-white/20 hover:shadow-md transform hover:scale-105" do %>
                <span class="flex items-center">
                  <span class="text-lg mr-3">📦</span>
                  <span class="group-hover:text-gray-900 transition-colors">All Products</span>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- Right Content: Records & Pagination -->
      <div class="col-span-12 lg:col-span-8">
        <div class="relative bg-gradient-to-br from-slate-50 via-gray-50 to-zinc-50 rounded-2xl shadow-lg border border-gray-100 overflow-hidden backdrop-blur-sm">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-slate-500/5 to-zinc-500/5 rounded-2xl"></div>
          <!-- Header -->
          <div class="relative px-6 py-4 border-b border-gray-200/50 bg-white/30 backdrop-blur-sm">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-8 h-8 bg-gradient-to-r from-slate-600 to-gray-700 rounded-lg flex items-center justify-center shadow-md mr-3">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900">Product Records</h3>
              </div>
              <span class="text-sm text-gray-600 bg-white/50 backdrop-blur-sm px-3 py-1 rounded-lg border border-white/20">
                Showing <%= @products.count %> of <%= @products.total_count %> records
              </span>
            </div>
          </div>
          <!-- Statistics Dashboard -->
          <% if Current.session&.user&.can_create_products? %>
            <div class="relative mb-8 bg-gradient-to-br from-emerald-50 via-teal-50 to-cyan-50 rounded-2xl shadow-lg border border-emerald-100 p-6 backdrop-blur-sm">
              <!-- Gradient overlay -->
              <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/5 to-cyan-500/5 rounded-2xl"></div>
              <div class="relative">
                <div class="flex items-center mb-4">
                  <div class="w-10 h-10 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center shadow-lg">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h3 class="text-lg font-bold text-gray-900">Quick Stats</h3>
                    <p class="text-xs text-gray-600">Product analytics</p>
                  </div>
                </div>
                <div class="space-y-4">
                  <div class="flex justify-between items-center p-3 bg-white/40 backdrop-blur-sm rounded-xl border border-white/20">
                    <span class="text-sm font-medium text-gray-700 flex items-center">
                      <span class="w-3 h-3 bg-blue-500 rounded-full mr-2 animate-pulse"></span>
                      Total Products
                    </span>
                    <span class="font-bold text-gray-900 text-lg"><%= @products.total_count %></span>
                  </div>
                  <div class="flex justify-between items-center p-3 bg-white/40 backdrop-blur-sm rounded-xl border border-white/20">
                    <span class="text-sm font-medium text-gray-700 flex items-center">
                      <span class="w-3 h-3 bg-emerald-500 rounded-full mr-2 animate-pulse"></span>
                      My Products
                    </span>
                    <span class="font-bold text-emerald-600 text-lg"><%= Product.where(user: Current.session.user).count %></span>
                  </div>
                  <div class="flex justify-between items-center p-3 bg-white/40 backdrop-blur-sm rounded-xl border border-white/20">
                    <div class="flex justify-between items-center p-3 bg-white/40 backdrop-blur-sm rounded-xl border border-white/20">
                      <span class="text-sm font-medium text-gray-700 flex items-center">
                        <span class="w-3 h-3 bg-orange-500 rounded-full mr-2 animate-pulse"></span>
                        Total Ingredients
                      </span>
                      <span class="font-bold text-orange-600 text-lg"><%= Ingredient.joins(:product).count %></span>
                    </div>
                    <div class="flex justify-between items-center p-3 bg-white/40 backdrop-blur-sm rounded-xl border border-white/20">
                      <span class="text-sm font-medium text-gray-700 flex items-center">
                        <span class="w-3 h-3 bg-purple-500 rounded-full mr-2 animate-pulse"></span>
                        Avg Ingredients
                      </span>
                      <span class="font-bold text-purple-600 text-lg"><%= Product.any? ? (Ingredient.count.to_f / Product.count).round(1) : 0 %></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <% if @products.any? %>
            <!-- Table -->
            <div class="relative overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200/50">
                <thead class="bg-gradient-to-r from-gray-50 to-slate-50 backdrop-blur-sm">
                  <tr>
                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Product Name</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Creator</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Ingredients</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Created</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
                  </tr>
                </thead>
                <tbody class="bg-white/40 backdrop-blur-sm divide-y divide-gray-200/30">
                  <% @products.each do |product| %>
                    <tr class="hover:bg-white/60 transition-all duration-200 cursor-pointer" onclick="window.location.href='<%= product_path(product) %>'">
                      <!-- Product Name -->
                      <td class="px-6 py-4">
                        <div class="text-sm font-medium text-gray-900"><%= product.name %></div>
                        <div class="text-sm text-gray-500">ID: <%= product.id %></div>
                      </td>
                      <!-- Creator -->
                      <td class="px-6 py-4">
                        <div class="text-sm text-gray-900"><%= product.user.email_address.split('@').first %></div>
                        <div class="text-xs text-gray-500 capitalize"><%= product.user.role %></div>
                      </td>
                      <!-- Ingredients -->
                      <td class="px-6 py-4">
                        <div class="text-sm text-gray-900"><%= product.ingredients.count %> ingredients</div>
                        <% if product.ingredients.any? %>
                          <div class="text-xs text-gray-500">
                            <%= product.ingredients.limit(2).pluck(:name).join(', ') %>
                            <% if product.ingredients.count > 2 %>
                              + <%= product.ingredients.count - 2 %> more
                            <% end %>
                          </div>
                        <% end %>
                      </td>
                      <!-- Created -->
                      <td class="px-6 py-4">
                        <div class="text-sm text-gray-900"><%= product.created_at.strftime("%b %d, %Y") %></div>
                        <div class="text-xs text-gray-500"><%= time_ago_in_words(product.created_at) %> ago</div>
                      </td>
                      <!-- Actions -->
                      <td class="px-6 py-4 text-sm" onclick="event.stopPropagation()">
                        <div class="flex space-x-2">
                          <%= link_to "View", product_path(product), 
                              class: "text-blue-600 hover:text-blue-900 transition-colors" %>
                          <% if Current.session&.user&.can_edit_product?(product) %>
                            <%= link_to "Edit", edit_product_path(product), 
                                class: "text-indigo-600 hover:text-indigo-900 transition-colors" %>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <!-- Pagination -->
            <div class="px-6 py-4 border-t border-gray-200">
              <div class="flex items-center justify-between">
                <div class="text-sm text-gray-700">
                  Showing <%= @products.offset_value + 1 %> to 
                  <%= [@products.offset_value + @products.limit_value, @products.total_count].min %> of 
                  <%= @products.total_count %> results
                </div>
                <div>
                  <%= paginate @products %>
                </div>
              </div>
            </div>
          <% else %>
            <!-- Empty State -->
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No products found</h3>
              <p class="mt-1 text-sm text-gray-500">Try adjusting your search criteria or create a new product.</p>
              <% if Current.session&.user&.can_create_products? %>
                <div class="mt-6">
                  <%= link_to new_product_path, 
                      class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Create First Product
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
