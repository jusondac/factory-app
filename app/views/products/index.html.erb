<div class="w-full">
  <!-- Page Header -->
  <div class="sm:flex sm:items-center sm:justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Product Management</h1>
      <p class="mt-2 text-sm text-gray-700">
        Manage and oversee all factory products and their ingredients
      </p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <% if Current.session&.user&.can_create_products? %>
        <%= link_to new_product_path, class: "inline-flex items-center justify-center rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" do %>
          <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
          </svg>
          New Product
        <% end %>
      <% end %>
    </div>
  </div>
  
  <!-- Search Section -->
  <div class="bg-white rounded-lg shadow p-6 mb-8">
    <%= search_form_for @q, local: true, class: "grid grid-cols-1 md:grid-cols-3 gap-4" do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Product Name</label>
        <%= f.search_field :name_cont, placeholder: "Search by product name...", 
            class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Created By</label>
        <%= f.search_field :user_email_address_cont, placeholder: "Search by creator email...", 
            class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>
      <div class="flex items-end gap-2">
        <%= f.submit "Search", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
        <%= link_to "Clear", products_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
      </div>
    <% end %>
  </div>
  
  <!-- Statistics Dashboard for Managers/Heads -->
  <% if Current.session&.user&.can_create_products? %>
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
      <!-- Total Products -->
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500">Total Products</dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= @products.total_count %></dd>
      </div>
      <!-- My Products -->
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500">My Products</dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">
          <%= Product.where(user: Current.session.user).count %>
        </dd>
      </div>
      <!-- Total Ingredients -->
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500">Total Ingredients</dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">
          <%= Ingredient.joins(:product).count %>
        </dd>
      </div>
      <!-- Avg Ingredients per Product -->
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500">Avg Ingredients</dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">
          <%= Product.any? ? (Ingredient.count.to_f / Product.count).round(1) : 0 %>
        </dd>
      </div>
    </div>
  <% end %>
  <!-- Filter and Search Bar -->
  <div class="bg-white shadow-sm rounded-lg mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div class="flex-1 min-w-0">
          <h2 class="text-lg font-medium text-gray-900">Products Overview</h2>
        </div>
        <div class="mt-3 sm:mt-0 sm:ml-4">
          <div class="flex rounded-md shadow-sm">
            <div class="relative flex-grow focus-within:z-10">
              <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
                </svg>
              </div>
              <input type="text" placeholder="Search products..." class="block w-full rounded-none rounded-l-md border-0 py-1.5 pl-10 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6">
            </div>
            <button type="button" class="relative -ml-px inline-flex items-center gap-x-1.5 rounded-r-md px-3 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
              <svg class="-ml-0.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M2.628 1.601C5.028 1.206 7.49 1 10 1s4.973.206 7.372.601a.75.75 0 01.628.74v2.288a2.25 2.25 0 01-.659 1.59l-4.682 4.683a2.25 2.25 0 00-.659 1.59v3.037c0 .684-.31 1.33-.844 1.757l-1.937 1.55A.75.75 0 018 18.25v-5.757a2.25 2.25 0 00-.659-1.591L2.659 6.22A2.25 2.25 0 012 4.629V2.34a.75.75 0 01.628-.739z" clip-rule="evenodd" />
              </svg>
              Filter
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Products Grid/Table -->
  <% if @products.any? %>
    <div class="bg-white shadow-sm rounded-lg overflow-hidden">
      <!-- Table Header -->
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <div class="grid grid-cols-12 gap-4 text-sm font-medium text-gray-500 uppercase tracking-wider">
          <div class="col-span-3">Product Name</div>
          <div class="col-span-2">Creator</div>
          <div class="col-span-2">Ingredients</div>
          <div class="col-span-2">Created</div>
          <div class="col-span-2">Status</div>
          <div class="col-span-1">Actions</div>
        </div>
      </div>
      <!-- Products List -->
      <div class="divide-y divide-gray-200">
        <% @products.each do |product| %>
          <div class="px-6 py-4 hover:bg-gray-50 transition-colors cursor-pointer" onclick="window.location.href='<%= product_path(product) %>'">
            <div class="grid grid-cols-12 gap-4 items-center">
              <!-- Product Name -->
              <div class="col-span-3">
                <div class="flex items-center">
                  <div class="h-10 w-10 flex-shrink-0">
                    <div class="h-10 w-10 rounded-lg bg-blue-100 flex items-center justify-center">
                      <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      <%= product.name %>
                    </div>
                    <div class="text-sm text-gray-500">ID: #<%= product.id %></div>
                  </div>
                </div>
              </div>
              <!-- Creator -->
              <div class="col-span-2">
                <div class="flex items-center">
                  <div class="h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
                    <span class="text-xs font-medium text-gray-600">
                      <%= product.user.role.first.upcase %>
                    </span>
                  </div>
                  <div class="ml-2">
                    <div class="text-sm text-gray-900 capitalize"><%= product.user.role %></div>
                    <div class="text-xs text-gray-500"><%= product.user.email_address.split('@').first %></div>
                  </div>
                </div>
              </div>
              <!-- Ingredients -->
              <div class="col-span-2">
                <div class="flex items-center">
                  <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                    <%= product.ingredients.count %>
                  </span>
                  <% if product.ingredients.count > 0 %>
                    <div class="ml-2 text-xs text-gray-500">
                      <%= product.ingredients.limit(2).pluck(:name).join(", ") %>
                      <% if product.ingredients.count > 2 %>
                        +<%= product.ingredients.count - 2 %> more
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
              <!-- Created Date -->
              <div class="col-span-2">
                <div class="text-sm text-gray-900"><%= product.created_at.strftime("%b %d, %Y") %></div>
                <div class="text-xs text-gray-500"><%= time_ago_in_words(product.created_at) %> ago</div>
              </div>
              <!-- Status -->
              <div class="col-span-2">
                <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                  Active
                </span>
              </div>
              <!-- Actions -->
              <div class="col-span-1" onclick="event.stopPropagation()">
                <div class="flex items-center justify-end space-x-2">
                  <%= link_to product_path(product), class: "text-blue-600 hover:text-blue-900" do %>
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M10 12.5a2.5 2.5 0 100-5 2.5 2.5 0 000 5z" />
                      <path fill-rule="evenodd" d="M.664 10.59a1.651 1.651 0 010-1.186A10.004 10.004 0 0110 3c4.257 0 7.893 2.66 9.336 6.41.147.381.147.804 0 1.186A10.004 10.004 0 0110 17c-4.257 0-7.893-2.66-9.336-6.41z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                  <% if Current.session&.user&.can_create_products? && (product.user == Current.session.user || Current.session.user.head?) %>
                    <%= link_to edit_product_path(product), class: "text-green-600 hover:text-green-900" do %>
                      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="m2.695 14.762-1.262 3.155a.5.5 0 0 0 .65.65l3.155-1.262a4 4 0 0 0 1.343-.886L17.5 5.501a2.121 2.121 0 0 0-3-3L3.58 13.419a4 4 0 0 0-.885 1.343Z" />
                      </svg>
                    <% end %>
                    <%= link_to product_path(product), method: :delete, 
                        data: { confirm: "Are you sure you want to delete this product? This action cannot be undone." },
                        class: "text-red-600 hover:text-red-900" do %>
                      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 0 0 6 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 1 0 .23 1.482l.149-.022.841 10.518A2.75 2.75 0 0 0 7.596 19h4.807a2.75 2.75 0 0 0 2.742-2.53l.841-10.52.149.023a.75.75 0 0 0 .23-1.482A41.03 41.03 0 0 0 14 4.193V3.75A2.75 2.75 0 0 0 11.25 1h-2.5ZM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4ZM8.58 7.72a.75.75 0 0 0-1.5.06l.3 7.5a.75.75 0 1 0 1.5-.06l-.3-7.5Zm4.34.06a.75.75 0 1 0-1.5-.06l-.3 7.5a.75.75 0 1 0 1.5.06l.3-7.5Z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Pagination -->
    <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6 mt-6 rounded-lg shadow-sm">
      <div class="flex-1 flex justify-between sm:hidden">
        <%= paginate @products %>
      </div>
      <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
        <div>
          <p class="text-sm text-gray-700">
            Showing
            <span class="font-medium"><%= @products.offset_value + 1 %></span>
            to
            <span class="font-medium"><%= [@products.offset_value + @products.limit_value, @products.total_count].min %></span>
            of
            <span class="font-medium"><%= @products.total_count %></span>
            results
          </p>
        </div>
        <div>
          <%= paginate @products %>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12 bg-white rounded-lg shadow-sm">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
      </svg>
      <h3 class="mt-2 text-sm font-semibold text-gray-900">No products</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating your first product.</p>
      <% if Current.session&.user&.can_create_products? %>
        <div class="mt-6">
          <%= link_to new_product_path, class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" do %>
            <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
            </svg>
            New Product
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
