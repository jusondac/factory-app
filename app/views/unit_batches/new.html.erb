<div class="bg-gray-50 min-h-screen">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
    <!-- Page Header with Breadcrumb -->
    <div class="mb-6">
      <nav class="flex mb-4" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <%= link_to unit_batches_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600" do %>
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
              </svg>
              Unit Batches
            <% end %>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
              </svg>
              <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">New Unit Batch</span>
            </div>
          </li>
        </ol>
      </nav>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Create New Unit Batch</h1>
        <p class="mt-1 text-sm text-gray-600">Add a new unit batch to the production system</p>
      </div>
    </div>
    <!-- Form Container -->
    <div class="max-w-2xl mx-auto">
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
        <!-- Form Header -->
        <div class="flex items-center mb-8">
          <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <div class="ml-4">
            <h2 class="text-xl font-bold text-gray-900">Unit Batch Information</h2>
            <p class="text-sm text-gray-600">Fill in the details for the new unit batch</p>
          </div>
        </div>
        <!-- Form -->
        <%= form_with model: @unit_batch, local: true, class: "space-y-6" do |f| %>
          <!-- Error Messages -->
          <% if @unit_batch.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-xl p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    There were <%= pluralize(@unit_batch.errors.count, "error") %> with your submission:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc list-inside space-y-1">
                      <% @unit_batch.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <!-- Product Selection -->
          <div>
            <%= f.label :product_id, class: "block text-sm font-semibold text-gray-700 mb-3" do %>
              <span class="flex items-center">
                <span class="w-2 h-2 bg-blue-500 rounded-full mr-2"></span>
                Product <span class="text-red-500 ml-1">*</span>
              </span>
            <% end %>
            <%= f.select :product_id, 
                options_from_collection_for_select(@products, :id, :name, @unit_batch.product_id), 
                { prompt: "Select a product..." },
                { 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{@unit_batch.errors[:product_id].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}"
                } %>
            <% if @unit_batch.errors[:product_id].any? %>
              <p class="mt-2 text-sm text-red-600">
                <%= @unit_batch.errors[:product_id].first %>
              </p>
            <% end %>
          </div>
          <!-- Quantity -->
          <div>
            <%= f.label :quantity, class: "block text-sm font-semibold text-gray-700 mb-3" do %>
              <span class="flex items-center">
                <span class="w-2 h-2 bg-purple-500 rounded-full mr-2"></span>
                Quantity <span class="text-red-500 ml-1">*</span>
              </span>
            <% end %>
            <%= f.number_field :quantity, 
                min: 1,
                class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{@unit_batch.errors[:quantity].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}",
                placeholder: "Enter quantity" %>
            <% if @unit_batch.errors[:quantity].any? %>
              <p class="mt-2 text-sm text-red-600">
                <%= @unit_batch.errors[:quantity].first %>
              </p>
            <% end %>
          </div>
          <!-- Package Type -->
          <div>
            <%= f.label :package_type, class: "block text-sm font-semibold text-gray-700 mb-3" do %>
              <span class="flex items-center">
                <span class="w-2 h-2 bg-indigo-500 rounded-full mr-2"></span>
                Package Type <span class="text-red-500 ml-1">*</span>
              </span>
            <% end %>
            <%= f.select :package_type, 
                options_for_select([
                  ['Box', 'box'],
                  ['Bottle', 'bottle'],
                  ['Pouch', 'pouch'],
                  ['Can', 'can'],
                  ['Jar', 'jar'],
                  ['Sachet', 'sachet'],
                  ['Pack', 'pack'],
                  ['Cup', 'cup'],
                  ['Tube', 'tube'],
                  ['Bucket', 'bucket']
                ], @unit_batch.package_type),
                { prompt: "Select package type..." },
                { 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{@unit_batch.errors[:package_type].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}"
                } %>
            <% if @unit_batch.errors[:package_type].any? %>
              <p class="mt-2 text-sm text-red-600">
                <%= @unit_batch.errors[:package_type].first %>
              </p>
            <% end %>
          </div>
          <!-- Shift -->
          <div>
            <%= f.label :shift, class: "block text-sm font-semibold text-gray-700 mb-3" do %>
              <span class="flex items-center">
                <span class="w-2 h-2 bg-orange-500 rounded-full mr-2"></span>
                Shift <span class="text-red-500 ml-1">*</span>
              </span>
            <% end %>
            <%= f.select :shift, 
                options_for_select([
                  ['Morning (06:00 - 14:00)', 'morning'],
                  ['Afternoon (14:00 - 22:00)', 'afternoon'],
                  ['Night (22:00 - 06:00)', 'night']
                ], @unit_batch.shift),
                { prompt: "Select shift..." },
                { 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{@unit_batch.errors[:shift].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}"
                } %>
            <% if @unit_batch.errors[:shift].any? %>
              <p class="mt-2 text-sm text-red-600">
                <%= @unit_batch.errors[:shift].first %>
              </p>
            <% end %>
          </div>
          <!-- Status Selection -->
          <div>
            <%= f.label :status, class: "block text-sm font-semibold text-gray-700 mb-3" do %>
              <span class="flex items-center">
                <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                Status
              </span>
            <% end %>
            <%= f.select :status, 
                options_for_select([
                  ['Preparation', 'preparation'],
                  ['Production', 'production'],
                  ['Testing', 'testing'],
                  ['Packing', 'packing']
                ], @unit_batch.status),
                { prompt: "Select status..." },
                { 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{@unit_batch.errors[:status].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}"
                } %>
            <% if @unit_batch.errors[:status].any? %>
              <p class="mt-2 text-sm text-red-600">
                <%= @unit_batch.errors[:status].first %>
              </p>
            <% end %>
          </div>
          <!-- Unit ID Info -->
          <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-blue-800">Unit ID Information</h3>
                <div class="mt-2 text-sm text-blue-700">
                  <p>The Unit ID will be automatically generated when you create the unit batch. It follows the format: UNIT-YYYYMMDD-NUMBER</p>
                </div>
              </div>
            </div>
          </div>
          <!-- Form Actions -->
          <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
            <%= link_to unit_batches_path, 
                class: "px-6 py-3 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-xl hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
              Cancel
            <% end %>
            <%= f.submit "Create Unit Batch", 
                class: "px-6 py-3 text-sm font-medium text-white bg-gradient-to-r from-blue-600 to-purple-600 border border-transparent rounded-xl hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
