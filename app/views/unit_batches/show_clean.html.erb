<div class="bg-gray-50 min-h-screen">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
    <!-- Page Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Unit Batch Details</h1>
          <p class="mt-1 text-sm text-gray-600">Detailed information about unit batch <%= @unit_batch.unit_id %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to unit_batches_path, 
              class: "inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to List
          <% end %>
          <%= link_to edit_unit_batch_path(@unit_batch), 
              class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit
          <% end %>
          <%= link_to unit_batch_path(@unit_batch), 
              method: :delete,
              data: { 
                confirm: "Are you sure you want to delete this unit batch?",
                turbo_method: :delete
              },
              class: "inline-flex items-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Delete
          <% end %>
        </div>
      </div>
    </div>
    <!-- Main Content -->
    <div class="space-y-6">
      <!-- Unit Batch Overview Card -->
      <div class="relative bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 rounded-2xl shadow-lg border border-blue-100 p-6 backdrop-blur-sm">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-purple-500/5 rounded-2xl"></div>
        <div class="relative">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <div class="ml-4">
              <h2 class="text-2xl font-bold text-gray-900"><%= @unit_batch.unit_id %></h2>
              <p class="text-sm text-gray-600">Unit Batch Overview</p>
            </div>
            <div class="ml-auto">
              <% case @unit_batch.status %>
              <% when 'preparation' %>
                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                  <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                  </svg>
                  Preparation
                </span>
              <% when 'production' %>
                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                  <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
                  </svg>
                  Production
                </span>
              <% when 'testing' %>
                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
                  <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  Testing
                </span>
              <% when 'packing' %>
                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-green-100 text-green-800">
                  <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  Packing
                </span>
              <% end %>
            </div>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
              <div class="text-sm font-medium text-gray-600 mb-1">Product</div>
              <div class="text-lg font-bold text-gray-900"><%= @unit_batch.product.name %></div>
              <div class="text-xs text-gray-500"><%= pluralize(@unit_batch.product.ingredients.count, 'ingredient') %></div>
            </div>
            <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
              <div class="text-sm font-medium text-gray-600 mb-1">Unit ID</div>
              <div class="text-lg font-bold text-gray-900 font-mono"><%= @unit_batch.unit_id %></div>
              <div class="text-xs text-gray-500">Record #<%= @unit_batch.id %></div>
            </div>
            <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
              <div class="text-sm font-medium text-gray-600 mb-1">Created</div>
              <div class="text-lg font-bold text-gray-900"><%= @unit_batch.created_at.strftime("%b %d, %Y") %></div>
              <div class="text-xs text-gray-500"><%= time_ago_in_words(@unit_batch.created_at) %> ago</div>
            </div>
            <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
              <div class="text-sm font-medium text-gray-600 mb-1">Last Updated</div>
              <div class="text-lg font-bold text-gray-900"><%= @unit_batch.updated_at.strftime("%b %d, %Y") %></div>
              <div class="text-xs text-gray-500"><%= time_ago_in_words(@unit_batch.updated_at) %> ago</div>
            </div>
          </div>
        </div>
      </div>
      <!-- Process Details Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Preparation Card -->
        <div class="relative bg-gradient-to-br from-yellow-50 via-orange-50 to-red-50 rounded-2xl shadow-lg border border-yellow-100 backdrop-blur-sm">
          <div class="absolute inset-0 bg-gradient-to-r from-yellow-500/5 to-orange-500/5 rounded-2xl"></div>
          <div class="relative p-6">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-gradient-to-r from-yellow-500 to-orange-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold text-gray-900">Preparation Phase</h3>
                <p class="text-sm text-gray-600">Preparation stage details</p>
              </div>
            </div>
            <% if @unit_batch.prepare %>
              <div class="space-y-4">
                <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
                  <div class="grid grid-cols-2 gap-4 mb-3">
                    <div>
                      <div class="text-sm font-medium text-gray-600">Prepare ID</div>
                      <div class="text-lg font-bold text-gray-900 font-mono">
                        <%= @unit_batch.prepare.prepare_id %>
                      </div>
                    </div>
                    <div>
                      <div class="text-sm font-medium text-gray-600">Prepare Date</div>
                      <div class="text-lg font-bold text-gray-900">
                        <%= @unit_batch.prepare.prepare_date&.strftime("%B %d, %Y") || "Not set" %>
                      </div>
                    </div>
                    <div>
                      <div class="text-sm font-medium text-gray-600">Status</div>
                      <div class="text-lg font-bold text-gray-900">
                        <% case @unit_batch.prepare.status %>
                        <% when 'unchecked' %>
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            Unchecked
                          </span>
                        <% when 'checking' %>
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                            Checking
                          </span>
                        <% when 'checked' %>
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            ✓ Checked
                          </span>
                        <% when 'cancelled' %>
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                            Cancelled
                          </span>
                        <% end %>
                      </div>
                    </div>
                    <div>
                      <div class="text-sm font-medium text-gray-600">Checked By</div>
                      <div class="text-lg font-bold text-gray-900">
                        <%= @unit_batch.prepare.checked_by&.email_address&.split('@')&.first || "Not checked" %>
                      </div>
                    </div>
                  </div>
                  <%= link_to @unit_batch.prepare, 
                      class: "inline-flex items-center text-sm text-blue-600 hover:text-blue-700 font-medium transition-colors" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-2M7 7h.01M7 3a4 4 0 616.93 2.83l3.24 3.24a4 4 0 01-6.93-2.83L7 3z" />
                    </svg>
                    View Preparation Details
                  <% end %>
                </div>
              </div>
            <% else %>
              <div class="bg-white/40 backdrop-blur-sm rounded-xl p-8 border border-white/20 text-center">
                <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                  <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                  </svg>
                </div>
                <h4 class="text-lg font-medium text-gray-900 mb-2">No Preparation Assigned</h4>
                <p class="text-sm text-gray-500">This unit batch doesn't have a preparation phase assigned yet.</p>
              </div>
            <% end %>
          </div>
        </div>
        <!-- Production Card -->
        <div class="relative bg-gradient-to-br from-green-50 via-emerald-50 to-teal-50 rounded-2xl shadow-lg border border-green-100 backdrop-blur-sm">
          <div class="absolute inset-0 bg-gradient-to-r from-green-500/5 to-emerald-500/5 rounded-2xl"></div>
          <div class="relative p-6">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold text-gray-900">Production Phase</h3>
                <p class="text-sm text-gray-600">Manufacturing stage details</p>
              </div>
            </div>
            <% if @unit_batch.produce %>
              <div class="space-y-4">
                <div class="bg-white/40 backdrop-blur-sm rounded-xl p-4 border border-white/20">
                  <div class="flex justify-between items-start mb-3">
                    <div>
                      <div class="text-sm font-medium text-gray-600">Status</div>
                      <div class="text-lg font-bold text-gray-900">
                        <%= @unit_batch.produce.status.humanize %>
                      </div>
                    </div>
                    <div class="text-right">
                      <div class="text-sm font-medium text-gray-600">Started</div>
                      <div class="text-lg font-bold text-gray-900">
                        <%= @unit_batch.produce.created_at.strftime("%b %d, %Y") %>
                      </div>
                    </div>
                  </div>
                  <%= link_to @unit_batch.produce, 
                      class: "inline-flex items-center text-sm text-blue-600 hover:text-blue-700 font-medium transition-colors" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-2M7 7h.01M7 3a4 4 0 616.93 2.83l3.24 3.24a4 4 0 01-6.93-2.83L7 3z" />
                    </svg>
                    View Production Details
                  <% end %>
                </div>
              </div>
            <% else %>
              <div class="bg-white/40 backdrop-blur-sm rounded-xl p-8 border border-white/20 text-center">
                <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                  <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                  </svg>
                </div>
                <h4 class="text-lg font-medium text-gray-900 mb-2">No Production Started</h4>
                <p class="text-sm text-gray-500">Production hasn't been initiated for this unit batch yet.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- Action Cards -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Machine Check Card -->
        <div class="relative bg-gradient-to-br from-purple-50 via-violet-50 to-indigo-50 rounded-2xl shadow-lg border border-purple-100 backdrop-blur-sm">
          <div class="absolute inset-0 bg-gradient-to-r from-purple-500/5 to-indigo-500/5 rounded-2xl"></div>
          <div class="relative p-6">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold text-gray-900">Machine Check</h3>
                <p class="text-sm text-gray-600">Equipment verification and setup</p>
              </div>
            </div>
            <div class="bg-white/40 backdrop-blur-sm rounded-xl p-6 border border-white/20 text-center">
              <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h4 class="text-lg font-medium text-gray-900 mb-2">Machine Check Coming Soon</h4>
              <p class="text-sm text-gray-500 mb-4">Machine verification and setup functionality will be available here.</p>
              <button disabled class="inline-flex items-center px-4 py-2 bg-gray-300 text-gray-500 text-sm font-medium rounded-lg cursor-not-allowed">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                Check Machine
              </button>
            </div>
          </div>
        </div>
        <!-- Start Production Card -->
        <div class="relative bg-gradient-to-br from-emerald-50 via-teal-50 to-cyan-50 rounded-2xl shadow-lg border border-emerald-100 backdrop-blur-sm">
          <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/5 to-cyan-500/5 rounded-2xl"></div>
          <div class="relative p-6">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293H15M9 10v4m6-4v4m-6-4H7.586a1 1 0 00-.707.293L4.465 12.707A1 1 0 004 13.414V16a1 1 0 001 1h1.586a1 1 0 00.707-.293L9 14.414V14" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold text-gray-900">Start Production</h3>
                <p class="text-sm text-gray-600">Initialize manufacturing process</p>
              </div>
            </div>
            <div class="bg-white/40 backdrop-blur-sm rounded-xl p-6 border border-white/20 text-center">
              <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293H15M9 10v4m6-4v4m-6-4H7.586a1 1 0 00-.707.293L4.465 12.707A1 1 0 004 13.414V16a1 1 0 001 1h1.586a1 1 0 00.707-.293L9 14.414V14" />
                </svg>
              </div>
              <h4 class="text-lg font-medium text-gray-900 mb-2">Production Start Coming Soon</h4>
              <p class="text-sm text-gray-500 mb-4">Production initialization functionality will be available here.</p>
              <button disabled class="inline-flex items-center px-4 py-2 bg-gray-300 text-gray-500 text-sm font-medium rounded-lg cursor-not-allowed">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                Start Production
              </button>
            </div>
