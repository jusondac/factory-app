<div class="bg-gray-50 min-h-screen">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
    <!-- Page Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Unit Batch Management</h1>
          <p class="mt-1 text-sm text-gray-600">Track and manage production unit batches</p>
        </div>
        <%= link_to new_unit_batch_path, 
            class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          New Unit Batch
        <% end %>
      </div>
    </div>

    <!-- Two Column Layout -->
    <div class="grid grid-cols-12 gap-6">
      <!-- Left Sidebar: Filters & Info -->
      <div class="col-span-12 lg:col-span-4 space-y-6">
        <!-- Filter Card -->
        <div class="relative bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 rounded-2xl shadow-lg border border-blue-100 p-6 backdrop-blur-sm">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-purple-500/5 rounded-2xl"></div>
          <div class="relative">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-lg font-bold text-gray-900">Unit Batch Search</h3>
                <p class="text-xs text-gray-600">Find unit batches quickly</p>
              </div>
            </div>
            <%= search_form_for @q, local: true, class: "space-y-4" do |f| %>
              <!-- Unit ID -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-blue-500 rounded-full mr-2"></span>
                  Unit ID
                </label>
                <%= f.search_field :unit_id_cont, 
                    placeholder: "Search by unit ID...", 
                    class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md" %>
              </div>

              <!-- Product -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                  Product
                </label>
                <%= f.select :product_id_eq, 
                    options_from_collection_for_select(@products, :id, :name, params.dig(:q, :product_id_eq)), 
                    { prompt: "All Products" },
                    { class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md" } %>
              </div>

              <!-- Status -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-orange-500 rounded-full mr-2"></span>
                  Status
                </label>
                <%= f.select :status_eq, 
                    options_for_select([
                      ['All Statuses', ''],
                      ['Preparation', 'preparation'],
                      ['Production', 'production'],
                      ['Testing', 'testing'],
                      ['Packing', 'packing']
                    ], params.dig(:q, :status_eq)),
                    {},
                    { class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md" } %>
              </div>

              <!-- Search Button -->
              <div class="flex space-x-3">
                <%= f.submit "Search", 
                    class: "flex-1 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold py-3 px-4 rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" %>
                <%= link_to unit_batches_path, 
                    class: "flex-1 bg-gray-200 text-gray-700 font-semibold py-3 px-4 rounded-xl hover:bg-gray-300 transition-all duration-200 text-center" do %>
                  Reset
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Statistics Card -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
            Quick Stats
          </h3>
          <div class="space-y-3">
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">Total Unit Batches</span>
              <span class="font-bold text-gray-900"><%= @unit_batches.total_count %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">Preparation</span>
              <span class="font-bold text-yellow-600"><%= UnitBatch.preparation.count %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">Production</span>
              <span class="font-bold text-blue-600"><%= UnitBatch.production.count %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">Testing</span>
              <span class="font-bold text-orange-600"><%= UnitBatch.testing.count %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">Packing</span>
              <span class="font-bold text-green-600"><%= UnitBatch.packing.count %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Main Content: Unit Batches Grid -->
      <div class="col-span-12 lg:col-span-8">
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100">
          <div class="p-6 border-b border-gray-100">
            <h2 class="text-xl font-bold text-gray-900 flex items-center">
              <span class="w-2 h-2 bg-blue-500 rounded-full mr-2"></span>
              Unit Batches
            </h2>
          </div>

          <% if @unit_batches.any? %>
            <div class="p-6">
              <div class="grid gap-6 md:grid-cols-2">
                <% @unit_batches.each do |unit_batch| %>
                  <div class="group relative bg-gradient-to-br from-gray-50 to-white rounded-xl border border-gray-200 p-6 hover:shadow-xl transition-all duration-300 hover:border-blue-300 hover:scale-105">
                    <!-- Status Badge -->
                    <div class="absolute top-4 right-4">
                      <% case unit_batch.status %>
                      <% when 'preparation' %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          Preparation
                        </span>
                      <% when 'production' %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          Production
                        </span>
                      <% when 'testing' %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          Testing
                        </span>
                      <% when 'packing' %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          Packing
                        </span>
                      <% end %>
                    </div>

                    <!-- Unit Batch Info -->
                    <div class="mb-4">
                      <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors duration-200">
                        <%= unit_batch.unit_id %>
                      </h3>
                      <p class="text-sm text-gray-600 mb-2">
                        <span class="font-medium">Product:</span> <%= unit_batch.product.name %>
                      </p>
                      <p class="text-xs text-gray-500">
                        Created: <%= unit_batch.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                      </p>
                    </div>

                    <!-- Prepare/Produce Info -->
                    <div class="mb-4 space-y-2">
                      <% if unit_batch.prepare %>
                        <div class="text-xs text-gray-600">
                          <span class="font-medium">Prepare Date:</span> <%= unit_batch.prepare.prepare_date.strftime("%B %d, %Y") if unit_batch.prepare.prepare_date %>
                        </div>
                      <% end %>
                      <% if unit_batch.produce %>
                        <div class="text-xs text-gray-600">
                          <span class="font-medium">Production:</span> <%= unit_batch.produce.status.humanize %>
                        </div>
                      <% end %>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex space-x-2">
                      <%= link_to unit_batch_path(unit_batch), 
                          class: "flex-1 text-center px-3 py-2 bg-blue-100 text-blue-700 text-sm font-medium rounded-lg hover:bg-blue-200 transition-colors duration-200" do %>
                        View Details
                      <% end %>
                      <%= link_to edit_unit_batch_path(unit_batch), 
                          class: "flex-1 text-center px-3 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition-colors duration-200" do %>
                        Edit
                      <% end %>
                      <%= link_to unit_batch_path(unit_batch), 
                          method: :delete,
                          data: { 
                            confirm: "Are you sure you want to delete this unit batch?",
                            turbo_method: :delete
                          },
                          class: "flex-1 text-center px-3 py-2 bg-red-100 text-red-700 text-sm font-medium rounded-lg hover:bg-red-200 transition-colors duration-200" do %>
                        Delete
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>

              <!-- Pagination -->
              <div class="mt-8 flex justify-center">
                <%= paginate @unit_batches %>
              </div>
            </div>
          <% else %>
            <!-- Empty State -->
            <div class="p-12 text-center">
              <div class="w-24 h-24 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
              </div>
              <h3 class="text-lg font-medium text-gray-900 mb-2">No unit batches found</h3>
              <p class="text-gray-500 mb-6">Get started by creating your first unit batch.</p>
              <%= link_to new_unit_batch_path, 
                  class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Create Unit Batch
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
