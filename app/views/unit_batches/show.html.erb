<div class="bg-gray-50 min-h-screen">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
    <!-- Page Header with Breadcrumb -->
    <div class="mb-6">
      <nav class="flex mb-4" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <%= link_to unit_batches_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600" do %>
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
              </svg>
              Unit Batches
            <% end %>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
              </svg>
              <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2"><%= @unit_batch.unit_id %></span>
            </div>
          </li>
        </ol>
      </nav>
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Unit Batch Details</h1>
          <p class="mt-1 text-sm text-gray-600">Detailed information about unit batch <%= @unit_batch.unit_id %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to edit_unit_batch_path(@unit_batch), 
              class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit
          <% end %>
          <%= link_to unit_batch_path(@unit_batch), 
              method: :delete,
              data: { 
                confirm: "Are you sure you want to delete this unit batch?",
                turbo_method: :delete
              },
              class: "inline-flex items-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Delete
          <% end %>
        </div>
      </div>
    </div>
    <!-- Main Content Grid -->
    <div class="grid grid-cols-12 gap-6">
      <!-- Left Column: Basic Information -->
      <div class="col-span-12 lg:col-span-6 space-y-6">
        <!-- Basic Info Card -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <div class="ml-4">
              <h2 class="text-xl font-bold text-gray-900">Basic Information</h2>
              <p class="text-sm text-gray-600">Unit batch core details</p>
            </div>
          </div>
          <div class="space-y-4">
            <div class="flex justify-between items-center py-3 border-b border-gray-100">
              <span class="text-sm font-medium text-gray-600">Unit ID</span>
              <span class="text-sm font-bold text-gray-900 font-mono bg-gray-100 px-3 py-1 rounded-lg">
                <%= @unit_batch.unit_id %>
              </span>
            </div>
            <div class="flex justify-between items-center py-3 border-b border-gray-100">
              <span class="text-sm font-medium text-gray-600">Product</span>
              <span class="text-sm font-bold text-gray-900">
                <%= @unit_batch.product.name %>
              </span>
            </div>
            <div class="flex justify-between items-center py-3 border-b border-gray-100">
              <span class="text-sm font-medium text-gray-600">Status</span>
              <div>
                <% case @unit_batch.status %>
                <% when 'preparation' %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Preparation
                  </span>
                <% when 'production' %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Production
                  </span>
                <% when 'testing' %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Testing
                  </span>
                <% when 'packing' %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Packing
                  </span>
                <% end %>
              </div>
            </div>
            <div class="flex justify-between items-center py-3 border-b border-gray-100">
              <span class="text-sm font-medium text-gray-600">Created At</span>
              <span class="text-sm text-gray-900">
                <%= @unit_batch.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </span>
            </div>
            <div class="flex justify-between items-center py-3">
              <span class="text-sm font-medium text-gray-600">Last Updated</span>
              <span class="text-sm text-gray-900">
                <%= @unit_batch.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
              </span>
            </div>
          </div>
        </div>
      </div>
      <!-- Right Column: Preparation & Production Details -->
      <div class="col-span-12 lg:col-span-6 space-y-6">
        <!-- Preparation Card -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-gradient-to-r from-yellow-500 to-orange-600 rounded-xl flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
            <div class="ml-4">
              <h2 class="text-xl font-bold text-gray-900">Preparation Details</h2>
              <p class="text-sm text-gray-600">Preparation phase information</p>
            </div>
          </div>
          <% if @unit_batch.prepare %>
            <div class="space-y-4">
              <div class="flex justify-between items-center py-3 border-b border-gray-100">
                <span class="text-sm font-medium text-gray-600">Prepare Date</span>
                <span class="text-sm text-gray-900">
                  <%= @unit_batch.prepare.prepare_date.strftime("%B %d, %Y") if @unit_batch.prepare.prepare_date %>
                </span>
              </div>
              <div class="flex justify-between items-center py-3 border-b border-gray-100">
                <span class="text-sm font-medium text-gray-600">Status</span>
                <span class="text-sm text-gray-900">
                  <%= @unit_batch.prepare.status.humanize %>
                </span>
              </div>
              <div class="pt-3">
                <%= link_to @unit_batch.prepare, 
                    class: "inline-flex items-center text-sm text-blue-600 hover:text-blue-700 font-medium" do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-2M7 7h.01M7 3a4 4 0 016.93 2.83l3.24 3.24a4 4 0 01-6.93-2.83L7 3z" />
                  </svg>
                  View Preparation Details
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="text-center py-8">
              <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
              </div>
              <p class="text-sm text-gray-500">No preparation assigned yet</p>
            </div>
          <% end %>
        </div>
        <!-- Production Card -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-blue-600 rounded-xl flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
            </div>
            <div class="ml-4">
              <h2 class="text-xl font-bold text-gray-900">Production Details</h2>
              <p class="text-sm text-gray-600">Production phase information</p>
            </div>
          </div>
          <% if @unit_batch.produce %>
            <div class="space-y-4">
              <div class="flex justify-between items-center py-3 border-b border-gray-100">
                <span class="text-sm font-medium text-gray-600">Status</span>
                <span class="text-sm text-gray-900">
                  <%= @unit_batch.produce.status.humanize %>
                </span>
              </div>
              <div class="flex justify-between items-center py-3 border-b border-gray-100">
                <span class="text-sm font-medium text-gray-600">Started At</span>
                <span class="text-sm text-gray-900">
                  <%= @unit_batch.produce.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </span>
              </div>
              <div class="pt-3">
                <%= link_to @unit_batch.produce, 
                    class: "inline-flex items-center text-sm text-blue-600 hover:text-blue-700 font-medium" do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-2M7 7h.01M7 3a4 4 0 016.93 2.83l3.24 3.24a4 4 0 01-6.93-2.83L7 3z" />
                  </svg>
                  View Production Details
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="text-center py-8">
              <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                </svg>
              </div>
              <p class="text-sm text-gray-500">No production started yet</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
