<% content_for :title, "New Produce" %>
<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-gray-900">New Produce</h1>
  <%= link_to "Back to Produces", produces_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
</div>
<div class="bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <%= form_with(model: @produce, local: true, class: "space-y-6") do |form| %>
      <% if @produce.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@produce.errors.count, "error") %> prohibited this produce from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @produce.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div>
        <%= form.label :unit_batch_id, "Unit Batch", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= form.select :unit_batch_id, 
                         options_from_collection_for_select(@unit_batches, :id, :unit_id, @produce.unit_batch_id),
                         { prompt: "Select a unit batch" },
                         { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        <p class="mt-2 text-sm text-gray-500">
          Only unit batches in production status that don't have a produce record are shown.
        </p>
      </div>
      <div class="bg-gray-50 p-4 rounded-md">
        <p class="text-sm text-gray-600">
          <strong>Note:</strong> The product date will be automatically set to today's date, 
          and the product ID will be generated automatically.
        </p>
      </div>
      <div class="flex justify-end space-x-3">
        <%= link_to "Cancel", produces_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
        <%= form.submit "Create Produce", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>
<% if @unit_batches.empty? %>
  <div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-md p-4">
    <div class="flex">
      <div class="ml-3">
        <h3 class="text-sm font-medium text-yellow-800">No Available Unit Batches</h3>
        <div class="mt-2 text-sm text-yellow-700">
          <p>There are no unit batches in production status available for creating a produce record.</p>
          <p class="mt-1">
            <%= link_to "View Prepares", prepares_path, class: "text-yellow-800 underline hover:text-yellow-900" %>
            to check if any preparations need to be completed first.
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
