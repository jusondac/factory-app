<% content_for :title, "Produces" %>

<div class="bg-gray-50 min-h-screen">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
    <!-- Page Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Production Management</h1>
          <p class="mt-1 text-sm text-gray-600">Monitor and manage product production workflows</p>
        </div>
        <% if Current.user.can_edit_produces? %>
          <%= link_to new_produce_path, 
              class: "inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Production
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Two Column Layout -->
    <div class="grid grid-cols-12 gap-6">
      <!-- Left Sidebar: Filters & Info -->
      <div class="col-span-12 lg:col-span-4 space-y-6">
        <!-- Filter Card -->
        <div class="relative bg-gradient-to-br from-green-50 via-emerald-50 to-teal-50 rounded-2xl shadow-lg border border-green-100 p-6 backdrop-blur-sm">
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-r from-green-500/5 to-teal-500/5 rounded-2xl"></div>
          <div class="relative">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-gradient-to-r from-green-500 to-teal-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.121A1 1 0 013 6.414V4z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-lg font-bold text-gray-900">Production Filters</h3>
                <p class="text-xs text-gray-600">Find productions quickly</p>
              </div>
            </div>
            <%= search_form_for @q, local: true, class: "space-y-4" do |f| %>
              <!-- Production ID -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                  Product ID
                </label>
                <%= f.search_field :product_id_cont, 
                    placeholder: "Search by product ID...", 
                    class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md" %>
              </div>

              <!-- Product Date -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                  Product Date
                </label>
                <%= f.date_field :product_date_eq, 
                    class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md" %>
              </div>

              <!-- Status Filter -->
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center">
                  <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                  Production Status
                </label>
                <%= f.select :status_eq, 
                    options_for_select([
                      ["All Statuses", ""], 
                      ["Unproduce", "unproduce"], 
                      ["Producing", "producing"], 
                      ["Produced", "produced"]
                    ], params.dig(:q, :status_eq)), 
                    {}, 
                    { class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-200 hover:shadow-md" } %>
              </div>

              <!-- Action Buttons -->
              <div class="flex gap-3 pt-2">
                <%= f.submit "Search", 
                    class: "flex-1 bg-gradient-to-r from-green-500 to-emerald-600 text-white px-4 py-3 rounded-xl font-medium hover:from-green-600 hover:to-emerald-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" %>
                <%= link_to "Clear", produces_path, 
                    class: "flex-1 text-center bg-white/80 backdrop-blur-sm text-gray-700 px-4 py-3 rounded-xl font-medium hover:bg-white transition-all duration-200 shadow-md hover:shadow-lg border border-gray-200" %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Quick Stats Card -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-bold text-gray-900">Production Stats</h3>
            <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
          </div>
          <div class="space-y-3">
            <div class="flex justify-between items-center py-2 border-b border-gray-100">
              <span class="text-sm text-gray-600">Total Productions</span>
              <span class="text-lg font-bold text-gray-900"><%= @produces.total_count rescue @produces.count %></span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-gray-100">
              <span class="text-sm text-gray-600">In Progress</span>
              <span class="text-lg font-bold text-yellow-600"><%= @produces.select { |p| p.status == 'producing' }.count %></span>
            </div>
            <div class="flex justify-between items-center py-2">
              <span class="text-sm text-gray-600">Completed</span>
              <span class="text-lg font-bold text-green-600"><%= @produces.select { |p| p.status == 'produced' }.count %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Content: Production Table -->
      <div class="col-span-12 lg:col-span-8">
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
          <!-- Table Header -->
          <div class="bg-gradient-to-r from-green-50 to-emerald-50 px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-lg font-bold text-gray-900">Production Records</h3>
                <p class="text-sm text-gray-600 mt-1">
                  <%= pluralize(@produces.count, 'production') %> found
                </p>
              </div>
              <div class="flex items-center space-x-2">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <span class="w-2 h-2 bg-green-400 rounded-full mr-2"></span>
                  Live Data
                </span>
              </div>
            </div>
          </div>

          <!-- Table Content -->
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sort_link(@q, :product_id, "Product ID", class: "hover:text-green-600 transition-colors") %>
                  </th>
                  <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sort_link(@q, :product_date, "Production Date", class: "hover:text-green-600 transition-colors") %>
                  </th>
                  <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Unit Batch
                  </th>
                  <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Product Name
                  </th>
                  <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= sort_link(@q, :status, "Status", class: "hover:text-green-600 transition-colors") %>
                  </th>
                  <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @produces.each do |produce| %>
                  <tr class="hover:bg-green-50/50 transition-colors duration-150">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div class="flex-shrink-0 w-10 h-10">
                          <div class="w-10 h-10 bg-gradient-to-r from-green-400 to-emerald-500 rounded-full flex items-center justify-center shadow-sm">
                            <span class="text-xs font-bold text-white">
                              <%= produce.product_id.split('-').last %>
                            </span>
                          </div>
                        </div>
                        <div class="ml-4">
                          <div class="text-sm font-medium text-gray-900">
                            <%= link_to produce.product_id, produce, class: "text-green-600 hover:text-green-900 font-semibold transition-colors" %>
                          </div>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                      <div class="flex items-center">
                        <svg class="w-4 h-4 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <%= produce.product_date.strftime("%b %d, %Y") %>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                      <div class="flex items-center">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          <%= produce.unit_batch.unit_id %>
                        </span>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <div class="font-medium"><%= produce.product.name %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold transition-all duration-200
                        <%= case produce.status
                            when 'unproduce' then 'bg-gray-100 text-gray-800 border border-gray-200'
                            when 'producing' then 'bg-yellow-100 text-yellow-800 border border-yellow-200'
                            when 'produced' then 'bg-green-100 text-green-800 border border-green-200'
                            end %>">
                        <span class="w-2 h-2 rounded-full mr-2
                          <%= case produce.status
                              when 'unproduce' then 'bg-gray-400'
                              when 'producing' then 'bg-yellow-400'
                              when 'produced' then 'bg-green-400'
                              end %>"></span>
                        <%= produce.status.humanize %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <div class="flex items-center space-x-3">
                        <%= link_to produce, class: "text-green-600 hover:text-green-900 transition-colors font-medium" do %>
                          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                          </svg>
                          View
                        <% end %>
                        <% if Current.user.can_edit_produces? %>
                          <%= link_to edit_produce_path(produce), class: "text-blue-600 hover:text-blue-900 transition-colors font-medium" do %>
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Edit
                          <% end %>
                          <%= link_to produce, method: :delete,
                                      confirm: "Are you sure you want to delete this production record?",
                                      class: "text-red-600 hover:text-red-900 transition-colors font-medium" do %>
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                            Delete
                          <% end %>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <!-- Empty State -->
            <% if @produces.empty? %>
              <div class="text-center py-12">
                <div class="mx-auto w-24 h-24 bg-gradient-to-r from-green-100 to-emerald-100 rounded-full flex items-center justify-center mb-4">
                  <svg class="w-12 h-12 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No productions found</h3>
                <p class="text-gray-500 mb-6">Start by creating your first production record to track manufacturing progress.</p>
                <% if Current.user.can_edit_produces? %>
                  <%= link_to new_produce_path, 
                      class: "inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors duration-200" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Create First Production
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Pagination -->
        <% if @produces.respond_to?(:current_page) && @produces.total_pages > 1 %>
          <div class="mt-6 flex justify-center">
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 px-6 py-4">
              <%= paginate @produces, theme: "twitter_bootstrap_4" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
