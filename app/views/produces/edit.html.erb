<% content_for :title, "Edit Produce" %>
<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-gray-900">Edit Produce <%= @produce.product_id %></h1>
  <div class="space-x-2">
    <%= link_to "View", @produce, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "Back to Produces", produces_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
<div class="bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <%= form_with(model: @produce, local: true, class: "space-y-6") do |form| %>
      <% if @produce.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@produce.errors.count, "error") %> prohibited this produce from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @produce.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :product_id, "Product ID", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :product_id, readonly: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm bg-gray-50 text-gray-500" %>
          </div>
          <p class="mt-2 text-sm text-gray-500">Product ID cannot be changed</p>
        </div>
        <div>
          <%= form.label :product_date, "Product Date", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.date_field :product_date, readonly: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm bg-gray-50 text-gray-500" %>
          </div>
          <p class="mt-2 text-sm text-gray-500">Product date cannot be changed</p>
        </div>
      </div>
      <div>
        <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= form.select :status, 
                         options_for_select([
                           ["Unproduce", "unproduce"],
                           ["Producing", "producing"],
                           ["Produced", "produced"]
                         ], @produce.status),
                         {},
                         { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        <p class="mt-2 text-sm text-gray-500">
          Change the production status. Typically, the workflow is: Unproduce → Producing → Produced
        </p>
      </div>
      <div class="bg-gray-50 p-4 rounded-md">
        <h4 class="text-sm font-medium text-gray-900 mb-2">Unit Batch Information</h4>
        <div class="space-y-1 text-sm text-gray-600">
          <p><strong>Unit ID:</strong> <%= @produce.unit_batch.unit_id %></p>
          <p><strong>Product:</strong> <%= @produce.product.name %></p>
          <p><strong>Batch Status:</strong>
            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
              <%= case @produce.unit_batch.status
                  when 'preparation' then 'bg-blue-100 text-blue-800'
                  when 'production' then 'bg-yellow-100 text-yellow-800'
                  when 'testing' then 'bg-purple-100 text-purple-800'
                  when 'packing' then 'bg-green-100 text-green-800'
                  end %>">
              <%= @produce.unit_batch.status.humanize %>
            </span>
          </p>
        </div>
      </div>
      <div class="flex justify-end space-x-3">
        <%= link_to "Cancel", @produce, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
        <%= form.submit "Update Produce", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>
