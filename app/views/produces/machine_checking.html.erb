<% content_for :title, "Machine Checking - Production #{@produce.product_id}" %>
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-4">
          <%= link_to @produce, class: "inline-flex items-center p-2 text-gray-400 hover:text-gray-600 hover:bg-white rounded-lg transition-all duration-200" do %>
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
          <% end %>
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Machine Checking</h1>
            <p class="text-sm text-gray-600 mt-1">Production <%= @produce.product_id %> - <%= @produce.machine.name %></p>
          </div>
        </div>
      </div>
    </div>
    <!-- Two Column Layout like produce index -->
    <div class="grid grid-cols-12 gap-6">
      <!-- Left Sidebar: Machine Info -->
      <div class="col-span-12 lg:col-span-4 space-y-6">
        <!-- Machine Info Card -->
        <div class="bg-white shadow-lg rounded-xl border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900 flex items-center">
              <svg class="h-5 w-5 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
              Machine Information
            </h2>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <div class="bg-gray-50 rounded-lg p-4">
                <div class="text-sm font-medium text-gray-600 mb-1">Machine Name</div>
                <div class="text-lg font-bold text-gray-900"><%= @produce.machine.name %></div>
              </div>
              <div class="bg-gray-50 rounded-lg p-4">
                <div class="text-sm font-medium text-gray-600 mb-1">Serial Number</div>
                <div class="text-lg font-bold text-gray-900 font-mono"><%= @produce.machine.serial_number %></div>
              </div>
              <div class="bg-gray-50 rounded-lg p-4">
                <div class="text-sm font-medium text-gray-600 mb-1">Status</div>
                <div class="text-lg font-bold text-green-900">Active</div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Right Column: Machine Checking Form -->
      <div class="col-span-12 lg:col-span-8 space-y-6">
        <div class="bg-white shadow-lg rounded-xl border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-purple-50 to-violet-50 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900 flex items-center">
              <svg class="h-5 w-5 mr-2 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 8l2 2 4-4" />
              </svg>
              Machine Checking Questions
            </h2>
          </div>
          <div class="p-6">
            <%= form_with url: update_machine_checking_produce_path(@produce), method: :patch, local: true do |form| %>
              <% if @machine_checkings.any? %>
                <div class="space-y-8">
                  <% @machine_checkings.each do |checking| %>
                    <div class="bg-gradient-to-br from-gray-50 to-white rounded-xl border border-gray-200 p-6 shadow-sm">
                      <label class="block text-lg font-semibold text-gray-800 mb-4 flex items-center">
                        <span class="w-2 h-2 bg-purple-500 rounded-full mr-3"></span>
                        <%= checking.checking_name %>
                        <span class="text-red-500 ml-1">*</span>
                      </label>
                      <% if checking.checking_type == 'option' %>
                        <div class="space-y-3">
                          <% checking.checking_options.each do |option| %>
                            <% is_selected = @produce_machine_checks[checking.id] == option %>
                            <label class="relative cursor-pointer">
                              <%= radio_button_tag "machine_checking[#{checking.id}]", option, is_selected,
                                    class: "sr-only peer",
                                    id: "option_#{checking.id}_#{option.parameterize}",
                                    required: true %>
                              <div class="peer-checked:bg-gradient-to-r peer-checked:from-purple-500 peer-checked:to-violet-600 peer-checked:text-white peer-checked:border-purple-500 peer-checked:shadow-lg peer-checked:scale-105 w-full text-left p-4 border-2 border-gray-200 rounded-xl hover:bg-gray-50 hover:border-purple-300 transition-all duration-200 bg-white shadow-sm">
                                <div class="flex items-center justify-between">
                                  <div class="flex items-center space-x-3">
                                    <div class="peer-checked:bg-white peer-checked:text-purple-600 w-5 h-5 rounded-full border-2 border-gray-300 peer-checked:border-white flex items-center justify-center transition-all duration-200">
                                      <% if is_selected %>
                                        <div class="w-3 h-3 bg-white rounded-full"></div>
                                      <% end %>
                                    </div>
                                    <span class="font-medium"><%= option %></span>
                                  </div>
                                  <div class="peer-checked:text-white text-purple-600 opacity-60">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                  </div>
                                </div>
                              </div>
                            </label>
                          <% end %>
                        </div>
                      <% elsif checking.checking_type == 'text' %>
                        <%= text_area_tag "machine_checking[#{checking.id}]", 
                              @produce_machine_checks[checking.id],
                              placeholder: "Enter your detailed answer here...",
                              rows: 4,
                              class: "mt-2 block w-full rounded-xl border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 text-sm resize-none transition-all duration-200" %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <div class="mt-8 flex items-center justify-between bg-gradient-to-r from-gray-50 to-white rounded-xl p-6 border border-gray-200">
                  <%= link_to @produce, 
                        class: "inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-sm font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200" do %>
                    <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Cancel
                  <% end %>
                  <%= submit_tag "Complete Machine Checking", 
                        class: "inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-xl shadow-sm text-white bg-gradient-to-r from-purple-600 to-violet-600 hover:from-purple-700 hover:to-violet-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200 transform hover:scale-105" %>
                </div>
              <% else %>
                <div class="text-center py-12">
                  <div class="w-20 h-20 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="h-10 w-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                  </div>
                  <h3 class="text-xl font-medium text-gray-900 mb-2">No Checking Questions</h3>
                  <p class="text-gray-500 mb-6">This machine doesn't have any checking questions configured.</p>
                  <%= link_to @produce, 
                        class: "inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-sm font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 transition-all duration-200" do %>
                    <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Back to Production
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
