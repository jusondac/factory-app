<% content_for :title, "Production #{@produce.product_id}" %>
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-4">
          <%= link_to produces_path, class: "inline-flex items-center p-2 text-gray-400 hover:text-gray-600 hover:bg-white rounded-lg transition-all duration-200" do %>
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
          <% end %>
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Production <%= @produce.product_id %></h1>
            <p class="text-sm text-gray-600 mt-1">Detailed production overview</p>
          </div>
        </div>
        <div class="flex items-center space-x-3">
          <span class="inline-flex items-center rounded-full px-4 py-2 text-sm font-semibold shadow-sm <%= case @produce.status
            when 'unproduce' then 'bg-gray-100 text-gray-800'
            when 'producing' then 'bg-yellow-100 text-yellow-800'
            when 'produced' then 'bg-green-100 text-green-800'
            end %>">
            <% case @produce.status %>
            <% when 'unproduce' %>
              <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            <% when 'producing' %>
              <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
            <% when 'produced' %>
              <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            <% end %>
            <%= @produce.status.humanize %>
          </span>
        </div>
      </div>
      <!-- Success Banner -->
      <% if @produce.produced? %>
        <div class="mt-4 rounded-xl p-4">
          <div class="flex flex-col items-center space-x-3">
            <div class="flex-shrink-0 mb-8">
              <div class="w-20 h-20 bg-green-500 rounded-full flex items-center justify-center animate-pulse">
                <svg class="h-20 w-20 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
            </div>
            <div class="flex-1 text-center">
              <div class="flex flex-col items-center space-y-2">
                <h3 class="text-sm font-semibold text-green-900">Production completed successfully!</h3>
              </div>
              <p class="mt-1 text-xs text-green-700">This production batch has been completed and is ready for the next stage.</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column - Main Info -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Production Details Card -->
        <div class="bg-white shadow-lg rounded-xl border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900 flex items-center">
              <svg class="h-5 w-5 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
              Production Details
            </h2>
          </div>
          <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                      <svg class="h-4 w-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                      </svg>
                    </div>
                  </div>
                  <div>
                    <h3 class="text-sm font-medium text-gray-500">Product</h3>
                    <p class="text-lg font-semibold text-gray-900"><%= @produce.product.name %></p>
                  </div>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                      <svg class="h-4 w-4 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                      </svg>
                    </div>
                  </div>
                  <div>
                    <h3 class="text-sm font-medium text-gray-500">Unit Batch</h3>
                    <p class="text-lg font-semibold text-gray-900">
                      <%= link_to @produce.unit_batch.unit_id, unit_batch_path(@produce.unit_batch), class: "text-blue-600 hover:text-blue-700" %>
                    </p>
                  </div>
                </div>
              </div>
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                      <svg class="h-4 w-4 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a4 4 0 118 0v4m-4 8a2 2 0 100-4 2 2 0 000 4zm0 0v6a2 2 0 01-2 2H6a2 2 0 01-2-2v-6a2 2 0 012-2h2a2 2 0 012 2z" />
                      </svg>
                    </div>
                  </div>
                  <div>
                    <h3 class="text-sm font-medium text-gray-500">Production Date</h3>
                    <p class="text-lg font-semibold text-gray-900"><%= @produce.product_date.strftime("%B %d, %Y") %></p>
                  </div>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center">
                      <svg class="h-4 w-4 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                  </div>
                  <div>
                    <h3 class="text-sm font-medium text-gray-500">Batch Status</h3>
                    <p class="text-lg font-semibold text-gray-900">
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= case @produce.unit_batch.status
                        when 'preparation' then 'bg-blue-100 text-blue-800'
                        when 'production' then 'bg-yellow-100 text-yellow-800'
                        when 'testing' then 'bg-purple-100 text-purple-800'
                        when 'packing' then 'bg-green-100 text-green-800'
                        end %>">
                        <%= @produce.unit_batch.status.humanize %>
                      </span>
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <!-- Machine Selection and Actions for Workers -->
            <% if Current.user.worker? && !@produce.produced? %>
              <div class="border-t border-gray-200 pt-6 mt-6">
                <% unless @produce.machine.present? %>
                  <div class="mb-4">
                    <h4 class="text-sm font-medium text-gray-700 mb-3">Select Production Machine</h4>
                    <% if @all_production_machines.any? %>
                      <div class="space-y-2">
                        <% @all_production_machines.each do |machine| %>
                          <% if machine.inactive? %>
                            <%= button_to select_machine_produce_path(@produce, machine_id: machine.id), method: :patch,
                            class: "w-full text-left p-3 border border-gray-300 rounded-lg hover:bg-gray-50 hover:border-blue-500 transition-all duration-200",
                            data: { confirm: "Select #{machine.name} for this production?" } do %>
                              <div class="flex items-center justify-between">
                                <div>
                                  <div class="font-medium text-gray-900"><%= machine.name %></div>
                                  <div class="text-sm text-gray-500">Serial: <%= machine.serial_number %></div>
                                  <div class="text-sm text-green-600">Status: Available</div>
                                </div>
                                <div class="text-green-600">
                                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                  </svg>
                                </div>
                              </div>
                            <% end %>
                          <% else %>
                            <div class="w-full text-left p-3 border border-gray-200 rounded-lg bg-gray-50 opacity-60 cursor-not-allowed">
                              <div class="flex items-center justify-between">
                                <div>
                                  <div class="font-medium text-gray-500"><%= machine.name %></div>
                                  <div class="text-sm text-gray-400">Serial: <%= machine.serial_number %></div>
                                  <div class="text-sm text-red-500">Status: Currently in use</div>
                                </div>
                                <div class="text-gray-400">
                                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.728-.833-2.498 0L4.316 15.5c-.77.833.192 2.5 1.732 2.5z" />
                                  </svg>
                                </div>
                              </div>
                            </div>
                          <% end %>
                        <% end %>
                      </div>
                    <% else %>
                      <p class="text-sm text-gray-500 italic">No available production machines. All machines are currently in use.</p>
                    <% end %>
                  </div>
                <% else %>
                  <div class="mb-4">
                    <h4 class="text-sm font-medium text-gray-700 mb-2">Selected Machine</h4>
                    <div class="p-3 bg-green-50 border border-green-200 rounded-lg">
                      <div class="flex items-center justify-between">
                        <div>
                          <div class="font-medium text-green-900"><%= @produce.machine.name %></div>
                          <div class="text-sm text-green-700">Serial: <%= @produce.machine.serial_number %></div>
                        </div>
                        <div class="text-green-600">
                          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Machine Checking Button -->
                  <% unless @produce.machine_check? %>
                    <div class="mb-4">
                      <%= link_to machine_checking_produce_path(@produce),
                      class: "w-full inline-flex items-center justify-center rounded-lg bg-purple-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-purple-500 transition-all duration-200 hover:shadow-md" do %>
                        <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 8l2 2 4-4" />
                        </svg>
                        Machine Checking
                      <% end %>
                    </div>
                  <% else %>
                    <div class="mb-4">
                      <div class="p-3 bg-green-50 border border-green-200 rounded-lg">
                        <div class="flex items-center">
                          <svg class="h-5 w-5 text-green-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                          <span class="text-sm font-medium text-green-900">Machine checking completed</span>
                        </div>
                      </div>
                    </div>
                  <% end %>
                  <!-- Production Action Buttons -->
                  <% if @produce.machine_check? %>
                    <div class="space-y-3">
                      <% if @produce.unproduce? %>
                        <%= button_to start_production_produce_path(@produce), method: :patch,
                        class: "w-full inline-flex items-center justify-center rounded-lg bg-yellow-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-yellow-500 transition-all duration-200 hover:shadow-md",
                        data: { confirm: "Are you sure you want to start production for this batch?" } do %>
                          <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293H15M9 10v4m6-4v4m-6-4H7.586a1 1 0 00-.707.293L4.465 12.707A1 1 0 004 13.414V16a1 1 0 001 1h1.586a1 1 0 00.707-.293L9 14.414V14" />
                          </svg>
                          Start Production
                        <% end %>
                      <% elsif @produce.producing? %>
                        <%= button_to complete_production_produce_path(@produce), method: :patch,
                        class: "w-full inline-flex items-center justify-center rounded-lg bg-green-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-green-500 transition-all duration-200 hover:shadow-md",
                        data: { confirm: "Are you sure you want to mark this production as completed?" } do %>
                          <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                          Complete Production
                        <% end %>
                      <% end %>
                    </div>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
        <!-- Related Preparation Card -->
        <% if @produce.prepare %>
          <div class="bg-white shadow-lg rounded-xl border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-green-50 to-emerald-50 border-b border-gray-200">
              <h2 class="text-lg font-semibold text-gray-900 flex items-center">
                <svg class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                Related Preparation
              </h2>
            </div>
            <div class="p-6">
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="bg-gray-50 rounded-lg p-4">
                  <div class="text-sm font-medium text-gray-600 mb-1">Prepare ID</div>
                  <div class="text-lg font-bold text-gray-900">
                    <%= link_to @produce.prepare.prepare_id, prepare_path(@produce.prepare), class: "text-blue-600 hover:text-blue-700 font-mono" %>
                  </div>
                </div>
                <div class="bg-gray-50 rounded-lg p-4">
                  <div class="text-sm font-medium text-gray-600 mb-1">Prepare Date</div>
                  <div class="text-lg font-bold text-gray-900">
                    <%= @produce.prepare.prepare_date.strftime("%B %d, %Y") %>
                  </div>
                </div>
                <div class="bg-gray-50 rounded-lg p-4">
                  <div class="text-sm font-medium text-gray-600 mb-1">Status</div>
                  <div class="text-lg font-bold text-gray-900">
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= case @produce.prepare.status
                      when 'unchecked' then 'bg-gray-100 text-gray-800'
                      when 'checking' then 'bg-yellow-100 text-yellow-800'
                      when 'checked' then 'bg-green-100 text-green-800'
                      when 'cancelled' then 'bg-red-100 text-red-800'
                      end %>">
                      <% if @produce.prepare.status == 'checked' %>✓ <% end %>
                      <%= @produce.prepare.status.humanize %>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <!-- Right Column - Status & Actions -->
      <div class="space-y-6">
        <!-- Status Overview Card -->
        <div class="bg-white shadow-lg rounded-xl border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-indigo-50 to-purple-50 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900 flex items-center">
              <svg class="h-5 w-5 mr-2 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2-2V7a2 2 0 012-2h2a2 2 0 002 2v2a2 2 0 002 2h2a2 2 0 012-2V7a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 00-2 2h-2a2 2 0 00-2 2v6a2 2 0 01-2 2H9a2 2 0 01-2-2z" />
              </svg>
              Production Status
            </h2>
          </div>
          <div class="p-6">
            <div class="text-center mb-4">
              <div class="text-3xl font-bold text-gray-900 mb-1">
                <%= case @produce.status
                when 'unproduce' then '0%'
                when 'producing' then '50%'
                when 'produced' then '100%'
              end %>
              </div>
              <p class="text-sm text-gray-600">
                Production progress
              </p>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3 mb-4">
              <div class="<%= case @produce.status
                when 'unproduce' then 'bg-gray-400'
                when 'producing' then 'bg-yellow-500'
                when 'produced' then 'bg-green-500'
                end %> h-3 rounded-full transition-all duration-500 shadow-sm" 
                  style="width: <%= case @produce.status
                    when 'unproduce' then '0'
                    when 'producing' then '50'
                    when 'produced' then '100'
                    end %>%"></div>
            </div>
            <div class="grid grid-cols-1 gap-4 text-center">
              <div class="bg-gray-50 rounded-lg p-3">
                <div class="text-lg font-semibold <%= case @produce.status
                  when 'unproduce' then 'text-gray-600'
                  when 'producing' then 'text-yellow-600'
                  when 'produced' then 'text-green-600'
                  end %>">
                  <%= @produce.status.humanize %>
                </div>
                <div class="text-xs text-gray-600">Current Status</div>
              </div>
            </div>
          </div>
        </div>
        <!-- Quick Info Card -->
        <div class="bg-white shadow-lg rounded-xl border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-amber-50 to-yellow-50 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900 flex items-center">
              <svg class="h-5 w-5 mr-2 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Quick Info
            </h2>
          </div>
          <div class="p-6 space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Product ID</span>
              <span class="font-mono text-sm font-semibold text-gray-900"><%= @produce.product_id %></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Unit Batch</span>
              <span class="font-mono text-sm font-semibold text-gray-900">
                <%= link_to @produce.unit_batch.unit_id, unit_batch_path(@produce.unit_batch), class: "text-blue-600 hover:text-blue-700" %>
              </span>
            </div>
            <% if @produce.machine.present? %>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Machine</span>
                <span class="text-sm text-gray-900"><%= @produce.machine.name %></span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Machine Status</span>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= @produce.machine_check? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= @produce.machine_check? ? 'Checked' : 'Pending Check' %>
                </span>
              </div>
            <% end %>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Created</span>
              <span class="text-sm text-gray-900"><%= @produce.created_at.strftime("%m/%d/%Y") %></span>
            </div>
            <% if @produce.updated_at != @produce.created_at %>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Last Updated</span>
                <span class="text-sm text-gray-900"><%= time_ago_in_words(@produce.updated_at) %> ago</span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Status Information Banner -->
  <% if @produce.produced? %>
    <div class="mt-6 bg-gradient-to-r from-green-50 to-green-100 border border-green-200 rounded-xl p-6 shadow-sm">
      <div class="flex items-start space-x-4">
        <div class="flex-shrink-0">
          <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center">
